@model BlockModel
@{

    bool renderSocials = Model.Block.ExistSocials();
}
<footer class="container-fluid">
    <div class="lp-container">
        <div class="row center-xs">
            <div class="col-xs-12">
                @if (Model.Block.TryGetSetting("show_title") == true)
                {
                    <div class="lp-h2 lp-h2--color">
                        @Html.SubBlock(Model, "title")
                    </div>
                }
                @if (Model.Block.TryGetSetting("show_subtitle") == true)
                {
                    <div class="lp-h3 lp-h3--color">
                        @Html.SubBlock(Model, "subtitle")
                    </div>
                }
            </div>
            <div class="col-xs-12">
                <div class="row middle-xs center-xs">

                    @if (renderSocials)
                    {
                        <div class="col--only-pad lp-footer-social__social-items">
                            @Html.Partial("_Socials", Model.Block)
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</footer>
