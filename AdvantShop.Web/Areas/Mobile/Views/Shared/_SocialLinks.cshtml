@{
    bool isShowBlock = SettingsSocial.LinkVkActive || SettingsSocial.LinkFacebookActive || SettingsSocial.LinkYoutubeActive || SettingsSocial.LinkInstagrammActive
                       || SettingsSocial.LinkTelegramActive || SettingsSocial.LinkTwitterActive || SettingsSocial.LinkOkActive || SettingsSocial.LinkYandexZenActive || SettingsSocial.LinkRutubeActive;
}

@if (isShowBlock)
{
    <h3 class="footer-social__header">@T("Home.SocialLinks.Title")</h3>
    <div class="bigBtnsPanel">
        @if (SettingsSocial.LinkVkActive)
        {
            <a class="social social--vkontakte icon-vkontakte-before" aria-label="VK" href="@SettingsSocial.LinkVk"></a>
        }
        @if (SettingsSocial.LinkFacebookActive)
        {
            <a class="social social--facebook icon-facebook-before" aria-label="Facebook" href="@SettingsSocial.LinkFacebook"></a>
        }
        @if (SettingsSocial.LinkYoutubeActive)
        {
            <a class="social social--youtube icon-youtube-before" aria-label="Youtube" href="@SettingsSocial.LinkYoutube"></a>
        }
        @if (SettingsSocial.LinkInstagrammActive)
        {
            <a class="social social--instagram icon-instagram-before" aria-label="Instagram" href="@SettingsSocial.LinkInstagramm"></a>
        }
        @if (SettingsSocial.LinkTelegramActive)
        {
            <a class="social social--telegram icon-telegram-before" aria-label="Telegram" href="@SettingsSocial.LinkTelegram"></a>
        }
        @if (SettingsSocial.LinkTwitterActive)
        {
            <a class="social social--twitter icon-twitter-before" aria-label="Twitter" href="@SettingsSocial.LinkTwitter"></a>
        }
        @if (SettingsSocial.LinkOkActive)
        {
            <a class="social social--odnoklassniki icon-odnoklassniki-before"  aria-label="Odnoklassniki" href="@SettingsSocial.LinkOk"></a>
        }
        @if (SettingsSocial.LinkYandexZenActive)
        {
            <a class="social social--yandex-zen icon-yandex-zen-before" aria-label="Yandex zen" href="@SettingsSocial.LinkYandexZen"></a>
        }
        @if (SettingsSocial.LinkRutubeActive)
        {
            <a class="social social--rutube icon-rutube-before" aria-label="Rutube" href="@SettingsSocial.LinkRutube"></a>
        }
    </div>
}
