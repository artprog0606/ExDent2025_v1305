@{
    var  fileNameSourceList = new List<string>()
    {
        "~/fonts/" + AdvantShop.FilePath.FoldersHelper.GetFontFileName(AdvantShop.FilePath.Fonts.Icons),
        "~/fonts/" + AdvantShop.FilePath.FoldersHelper.GetFontFileName(AdvantShop.FilePath.Fonts.Mobile)    
    };
    
    if (SettingsDesign.Template != "_default")
    {
        fileNameSourceList.Add("~/Templates/" + SettingsDesign.Template + "/fonts/" + AdvantShop.FilePath.FoldersHelper.GetFontFileName(AdvantShop.FilePath.Fonts.Template));
    }
    
    @Html.Action("FontsStyles", "Common", new {fileNameSourceList, area = ""})
}