@using AdvantShop.Trial
@using AdvantShop.Saas
@using AdvantShop.Web.Admin.ViewModels.Shared.Common
@model  List<AdvantShop.Core.Modules.Module>
@{
    Layout = "_ModulesLayout.cshtml";
}

@Html.Header(new AdvantShop.Web.Admin.ViewModels.Shared.Common.HeaderViewModel()
{
    Title = T("Admin.Modules.LeftMenu.ModulesShop").ToString(),
    Back = new BackViewModel()
    {
      Url  = Url.AbsoluteActionUrl("Index", "Modules")
    }
})

<article ng-init="modules.pageType = false; modules.filterStart = '@(Request["name"] ?? string.Empty)'; modules.onInit()" class="modules-page">
    <a href="https://www.advantshop.net/help/pages/kak-ustanovity-moduli" target="_blank" class="m-b-sm link-academy link-invert inline-flex middle-xs">
        <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" version="1.1" id="Layer_1" x="0px" y="0px" viewBox="0 0 512 512" style="enable-background:new 0 0 512 512;" xml:space="preserve" width="18" height="18" fill="#989a9b" class="m-r-xs">
        <path d="M20.005,512c-5.097,0-10.116-1.948-13.925-5.641c-5.845-5.666-7.672-14.309-4.621-21.855l45.411-112.333  C16.162,332.253,0,285.425,0,236c0-63.375,26.855-122.857,75.62-167.489C123.891,24.331,187.952,0,256,0  s132.109,24.331,180.38,68.511C485.145,113.143,512,172.625,512,236c0,45.448-14.04,89.577-40.602,127.615  c-6.325,9.057-18.792,11.271-27.849,4.947s-11.271-18.792-4.947-27.849C460.452,309.425,472,273.215,472,236  c0-108.075-96.897-196-216-196S40,127.925,40,236c0,43.783,15.577,85.2,45.046,119.773c4.834,5.671,6.115,13.561,3.321,20.47  l-31.366,77.589l91.345-40.266c5.063-2.231,10.826-2.267,15.916-0.095C193.082,425.766,223.946,432,256,432  c36.892,0,73.299-8.587,105.286-24.832c9.85-5,21.887-1.072,26.889,8.775c5.001,9.849,1.073,21.887-8.775,26.889  C341.828,461.914,299.157,472,256,472c-34.48,0-67.835-6.191-99.276-18.413L28.068,510.301C25.474,511.444,22.728,512,20.005,512z   M276,325V217c0-11.046-8.954-20-20-20s-20,8.954-20,20v108c0,11.046,8.954,20,20,20S276,336.046,276,325z M256,128  c-11.046,0-20,8.954-20,20l0,0c0,11.046,8.954,20,20,20s20-8.954,20-20l0,0C276,136.954,267.046,128,256,128z"></path>
        </svg>
        <span>@T("Admin.Modules.LeftMenu.Instructions")</span>
    </a>

    <h2 class="modules-page__title">@T("Admin.Modules.LeftMenu.ModulesShop")</h2>

    <div class="ng-cloak" ng-if="modules.dataLoaded == true">
        <div ng-switch="modules.modulesMaster == null || modules.modulesMaster.length === 0">
            @if (TrialService.IsTrialEnabled)
            {
                <div class="h4 modules-page__text">
                    @T("Admin.Modules.Market.AttentionSomeModules")<br />
                    @T("Admin.Modules.Market.MoreInfo")<a href="https://www.advantshop.net/modules" target="_blank">https://www.advantshop.net/modules</a>
                </div>
            }
            <div class="card center-xs modules-page__empty" ng-switch-when="true">
                <div class="modules-page__empty-text">@T("Admin.Modules.Market.NoNewModules")</div>
            </div>

            <div ng-switch-when="false">
                <div>
                    <ui-grid-custom-filter grid-column-defs="modules.filterColumnDefs"
                                           grid-params="modules.gridParams"
                                           grid-search-text="@(string.IsNullOrEmpty(Request["name"]) ? "$ctrl.gridSearchText" : "'" + Request["name"] + "'")"
                                           grid-search-placeholder="$ctrl.gridSearchPlaceholder"
                                           on-change="modules.filterApply(params, item)"
                                           template-url="'@Html.GetAssetPath("ui-grid-custom-filter--mobile.html")'"
                                           on-remove="modules.filterRemove(name, item)">
                    </ui-grid-custom-filter>
                </div>
                <div class="modules-page__modules-list">
                    <div class="card card--image-horizontal module-card"
                         data-module-string-id="{{module.StringId | lowercase}}"
                         ng-repeat="module in modules.modulesData track by module.StringId">
                        <a class="card__image-wrap module-card__img-wrap" ng-href="{{module.DetailsLink}}" target="_blank">
                            <img ng-src="{{module.Icon}}" />
                        </a>
                        <div class="card__content">
                            <div class="module-card__name" ng-bind="module.Name"></div>
                            <div class="module-card__price"
                                 ng-if="@((SaasDataService.IsSaasEnabled || TrialService.IsTrialEnabled).ToLowerString()) || module.Price != 0 || (module.Price == 0 && module.IsFree)"
                                 ng-bind="module.PriceString">
                            </div>
                            <div class="module-card__description" ng-bind="module.BriefDescription"></div>
                            <div class="module-card__btns-wrap">
                                <button ng-if="(module.Active || module.Price == 0 || @((TrialService.IsTrialEnabled || SaasDataService.IsSaasEnabled).ToLowerString()) === true) && !module.DissalowInstall" type="button" class="btn btn-sm btn-success btn-block" ng-click="modules.installModule(module)">@T("Admin.Modules.Market.Install")</button>
                                <a ng-if="!module.Active && module.Price != 0 && @((TrialService.IsTrialEnabled || SaasDataService.IsSaasEnabled).ToLowerString()) !== true && module.DetailsLink != null && module.DetailsLink.length > 0" class="btn btn-sm btn-success btn-block" ng-href="{{module.DetailsLink}}" target="_blank">@T("Admin.Modules.Market.Buy")</a>
                                <a ng-if="module.DetailsLink != null && module.DetailsLink.length > 0" ng-href="{{module.DetailsLink}}" target="_blank" class="">@T("Admin.Mobile.Modules.Market.ModuleDescription")</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</article>