<ui-modal-trigger data-controller="'ModalAddEditUnitCtrl'" controller-as="ctrl"
                  template-url="@Html.GetAssetPath("addEditUnit.html")"
                  data-resolve="{'unitId': row.entity.Id}"
                  data-on-close="grid.appScope.$ctrl.fetchData()">
        <div class="card card--gap-row-sm card--p-18">
            <div class="flex between-xs center-xs">
                <div class="card__col m-r-xs flex middle-xs">
                    {{row.entity.Name}}
                </div>
                <div class="card__col card__col--end setting--align-center">
                    {{row.entity.ProductsCount}}
                </div>
            </div>
        </div>
</ui-modal-trigger>
