    var isMobile = SettingsDesign.IsMobileTemplate;
}
<div ng-controller="PropertiesCtrl as properties" ng-init="@(isMobile ? "settingsCatalog.addChildCtrl('properties', properties)" : "")">
    <div class="row">
        <div ng-if="properties.showMode != 'propertyValues'" class="col-xs-12 col-md-3 col-wl-2">
            <h2 class="sticky-page-name-text m-t-none setting__subtitle">@T("Admin.Properties.Index.PropertyGroups")</h2>
