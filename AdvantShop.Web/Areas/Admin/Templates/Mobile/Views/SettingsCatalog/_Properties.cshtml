                        <a href="" class="fa fa-plus link-alt header-alt-icons-item link-decoration-none"></a>
                    </ui-modal-trigger>
                </div>*@
            <property-groups group-id="properties.selectedGroupId"
                             on-init="properties.initPropertyGroups(propertyGroups)"
                             on-change-group="properties.onChangeGroup(groupId)">
            </property-groups>
            @*<div class="m-t-md">
                    <ui-modal-trigger data-controller="'ModalAddGroupCtrl'" controller-as="ctrl"
                                      template-url="@Html.GetAssetPath("addGroup.html")"
                                      data-on-close="properties.updatePropertyGroups(result)">
                        <button class="btn btn-sm btn-success" type="button">
                            <span class="fa fa-plus"></span> @T("Admin.Properties.Index.AddGroup")
                        </button>
                    </ui-modal-trigger>
                </div>*@
        </div>
        <div class="col-xs-12 col-md-9 col-wl-10">

            <div ng-if="properties.showMode != 'propertyValues'">

                <div class="sticky-page-name m-t-md" sticky sticky-top="0">
                    <div class="page-name-block sticky-page-name-inner">
                        <div class="page-name-block-item-main m-b-md">
                            <h2 class="sticky-page-name-text m-t-none setting__subtitle" data-e2e="PropertySettingTitle">
                                {{properties.selectedGroupName}}
                            </h2>

                            <a href="https://www.advantshop.net/help/pages/properties" target="_blank" class="link-academy setting--help-link link-invert inline-flex middle-xs">
