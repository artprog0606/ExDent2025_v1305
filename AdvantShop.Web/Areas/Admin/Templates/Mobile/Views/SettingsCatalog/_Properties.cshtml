                        </div>
                        @*<div class="page-name-block-item-additional m-b-md">
                                <ui-modal-trigger data-controller="'ModalAddEditPropertyCtrl'" controller-as="ctrl"
                                                  template-url="@Html.GetAssetPath("addEditProperty.html")"
                                                  data-resolve="{'groupId': properties.selectedGroupId}"
                                                  data-on-close="properties.grid.fetchData()"
                                                  size="lg">
                                    <button class="btn btn-sm btn-success btn--margin-left" data-e2e="PropertySettingAdd" type="button">
                                        <span class="fa fa-plus"></span> @T("Admin.Properties.AddProperty")
                                    </button>
                                </ui-modal-trigger>
                            </div>*@
                    </div>
                </div>
                <ui-grid-custom class="grid-properties"
                                grid-unique-id="grid"
                                grid-extend-ctrl="properties"
                                grid-row-identificator="'PropertyId'"
                                grid-options="properties.gridOptions"
                                grid-on-init="properties.gridOnInit(grid)"
                                grid-url="'properties/getProperties'"
                                grid-params="{groupId: properties.selectedGroupId}"
                                grid-inplace-url="'properties/inplaceProperty'"
                                grid-swipe-line="true">
                    <ui-grid-custom-override-header-control>
                        <span class="ui-grid-custom-override-header__cell">Название</span>
                        <span class="ui-grid-custom-override-header__cell">Используется у товаров</span>
                    </ui-grid-custom-override-header-control>
                    <ui-grid-custom-override-control class="ng-cloak">
                        @Html.Partial("PropertiesGridItemInSettingCatalog")
                    </ui-grid-custom-override-control>
                    <ui-grid-custom-footer class="ui-grid-custom-footer" ng-bind="properties.grid.gridOptions.TotalString">
                    </ui-grid-custom-footer>
                </ui-grid-custom>

            </div>

            <div ng-if="properties.showMode == 'propertyValues'" ng-controller="PropertyValuesCtrl as propertyvalues" ng-init="propertyvalues.showPropertyValues(properties.selectedPropertyId); properties.propertyvalues = propertyvalues;">

                <div class="sticky-page-name" sticky sticky-top="0">
                    <div class="page-name-block sticky-page-name-inner">
                        <div class="page-name-block-item-main">
                            <h2 class="page-name-block-text sticky-page-name-text setting--m-t-none" data-e2e="PropertyValueSettingTitle">
                                @T("Admin.PropertyValues.PropertyValues") - "{{properties.propertyvalues.selectedProperty.Name}}"
                            </h2>
                            <div class="m-t-xs setting--m-b-sm">
                                <a href="" ng-click="properties.back()">@T("Admin.Back")</a>
                            </div>
                        </div>
                        @if(!isMobile) {
                        <div class="page-name-block-item-additional setting--m-b-sm">
                            <ui-modal-trigger data-controller="'ModalAddPropertyValueCtrl'" controller-as="ctrl"
                                              template-url="@Html.GetAssetPath("addPropertyValue.html")"
                                              data-resolve="{value: {'propertyId': properties.selectedPropertyId, mode: 'add'}}"
                                              data-on-close="propertyvalues.grid.fetchData()">
                                <button class="btn btn-sm btn-success btn--margin-left" data-e2e="PropertyValueSettingAdd" type="button">
                                    <span class="fa fa-plus"></span> @T("Admin.PropertyValues.AddPropertyValue")
                                </button>
                            </ui-modal-trigger>
                        </div>
                        }
                    </div>
                </div>

                <ui-grid-custom grid-unique-id="gridPropertyValues"
                                grid-options="propertyvalues.gridOptions"
                                grid-on-init="propertyvalues.gridOnInit(grid)"
                                grid-url="'propertyvalues/getPropertyValues'"
                                grid-params="{propertyId: properties.selectedPropertyId}"
                                grid-inplace-url="'propertyvalues/inplacePropertyValue'"
                                grid-swipe-line="true">
                    <ui-grid-custom-override-header-control>
                        <span class="ui-grid-custom-override-header__cell">Название</span>
                        <span class="ui-grid-custom-override-header__cell">Используется у товаров</span>
                    </ui-grid-custom-override-header-control>
                    <ui-grid-custom-override-control class="ng-cloak">
                        @Html.Partial("PropertiesValueGridItemInSettingCatalog")
                    </ui-grid-custom-override-control>
                    <ui-grid-custom-footer class="ui-grid-custom-footer" ng-bind="propertyvalues.grid.gridOptions.TotalString">
                    </ui-grid-custom-footer>
                </ui-grid-custom>
            </div>
            <div class="adv-panel-info m-t-md setting__mobile-adv-panel-info">
                <a href="https://www.advantshop.net/help/pages/properties" target="_blank" class="p-l-xs m-t-xs setting--m-t-none">
                    @T("Admin.Properties.Index.Instruction")
                </a>
            </div>
        </div>
    </div>
</div>