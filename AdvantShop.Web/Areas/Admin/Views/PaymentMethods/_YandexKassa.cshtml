@model AdvantShop.Web.Infrastructure.Admin.PaymentMethods.YandexKassaPaymentModel

@{
    var isMobile = SettingsDesign.IsMobileTemplate;
}

<div class="form-group row middle-xs setting__form-group">
    <div class="col-xs-12 col-md-8">
        <div class="adv-panel-info setting__mobile-adv-panel-info" style="@(!isMobile ? "max-width:910px;" : "display:flex;")">
            <div>
                Если у вас нет учетной записи в сервисе ЮKassa, вы можете зарегистрироваться по <a href="https://go.advantshop.net/yookassa" target="_blank">ссылке</a>
            </div>
        </div>
    </div>
</div>


<div class="form-group row middle-xs setting__form-group">
    <div class="flex-grow-n setting__label @(isMobile ? "col-xs-12" : "col-fixed-size-md")">
        Способ подключения
    </div>
    <div class="col-xs-12 col-md-6 relative setting--m-t-sm @(isMobile ? "flex middle-xs" : "")">
        @Html.DropDownListFor(x => x.Protocol, Model.Protocols, new { ng_model = "paymentMethod.Parameters.Protocol", ng_init = "paymentMethod.Parameters.Protocol='" + Model.Protocol + "'", @class = "form-control input-alt" })
        <help-trigger class="ng-cloak help-trigger-icon-abs @(isMobile ? "m-l-sm p-l-xs" : "")" data-title="Способ подключения">
            Протокол взаимодействия<br />
            Платежный модуль - HTTP<br />
            API - протокол API
        </help-trigger>
    </div>
</div>

<div class="form-group row middle-xs setting__form-group">
    <div class="flex-grow-n setting__label @(isMobile ? "col-xs-12" : "col-fixed-size-md")">
        <span class="text-required">ShopId</span>
    </div>
    <div class="col-xs-12 col-md-6 relative setting--m-t-sm">
        @Html.TextBoxFor(x => x.ShopId, new { ng_model = "paymentMethod.Parameters.ShopId", @class = "form-control input-alt", required = "required", validation_input_text = "ShopId" })
    </div>
</div>



<div class="form-group row middle-xs setting__form-group" ng-if="paymentMethod.Parameters.Protocol == ''">
    <div class="flex-grow-n setting__label @(isMobile ? "col-xs-12" : "col-fixed-size-md")">
        <span class="text-required">ScId</span>
    </div>
    <div class="col-xs-12 col-md-6 relative setting--m-t-sm">
        @Html.TextBoxFor(x => x.ScId, new { ng_model = "paymentMethod.Parameters.ScId", @class = "form-control input-alt", required = "required", validation_input_text = "ScId" })
    </div>
</div>


<div class="form-group row middle-xs setting__form-group" ng-if="paymentMethod.Parameters.Protocol != ''">
    <div class="flex-grow-n setting__label @(isMobile ? "col-xs-12" : "col-fixed-size-md")">
        <span class="text-required">Секретный ключ</span>
    </div>
    <div class="col-xs-12 col-md-6 relative setting--m-t-sm">
        @Html.TextBoxFor(x => x.SecretKey, new { ng_model = "paymentMethod.Parameters.SecretKey", @class = "form-control input-alt", required = "required", validation_input_text = "Секретный ключ" })
    </div>
</div>


<div class="form-group row middle-xs setting__form-group" ng-if="paymentMethod.Parameters.Protocol == ''">
    <div class="flex-grow-n setting__label @(isMobile ? "col-xs-12" : "col-fixed-size-md")">
        <span class="text-required">@T("Admin.PaymentMethods.YandexKassa.PasswordForMD5")</span>
    </div>
    <div class="col-xs-12 col-md-6 relative setting--m-t-sm">
        @Html.TextBoxFor(x => x.Password, new { ng_model = "paymentMethod.Parameters.Password", @class = "form-control input-alt", required = "required", validation_input_text = T("Admin.PaymentMethods.YandexKassa.PasswordForMD5").ToString() })
    </div>
</div>


<div class="form-group row middle-xs setting__form-group" ng-if="paymentMethod.Parameters.Protocol != ''">
    <div class="flex-grow-n setting__label @(isMobile ? "col-xs-12" : "col-fixed-size-md")">
        @T("Admin.PaymentMethods.YandexKassa.PaymentMethod")
    </div>
    <div class="col-xs-12 col-md-6 relative setting--m-t-sm">
        @Html.DropDownListFor(x => x.YaPaymentType, Model.YaPaymentTypesNew, new { ng_model = "paymentMethod.Parameters.YaPaymentType", ng_init = "paymentMethod.Parameters.YaPaymentType='" + Model.YaPaymentType + "'", @class = "form-control input-alt" })
    </div>
</div>



<div class="form-group row middle-xs setting__form-group" ng-if="paymentMethod.Parameters.Protocol == ''">
    <div class="flex-grow-n setting__label @(isMobile ? "col-xs-12" : "col-fixed-size-md")">
        @T("Admin.PaymentMethods.YandexKassa.PaymentMethod")
    </div>
    <div class="col-xs-12 col-md-6 relative setting--m-t-sm">
        @Html.DropDownListFor(x => x.YaPaymentType, Model.YaPaymentTypes, new { ng_model = "paymentMethod.Parameters.YaPaymentType", ng_init = "paymentMethod.Parameters.YaPaymentType='" + Model.YaPaymentType + "'", @class = "form-control input-alt" })
    </div>
</div>



