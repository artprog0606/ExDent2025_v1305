<div class="form-group row middle-xs setting__form-group">
    @if (!isMobile)
    {
        <div class="flex-grow-n setting__label @(isMobile ? "col-xs-12" : "col-fixed-size-md")">
            @T("Admin.PaymentMethods.YandexKassa.SendDataForCheck")
        </div>
    }
    <div class="col-xs col-sm-6 relative">
        <label class="adv-checkbox-label form-label-block">
            @Html.CheckBoxFor(x => x.SendReceiptData, new { ng_model = "paymentMethod.Parameters.SendReceiptData", ng_init = "paymentMethod.Parameters.SendReceiptData=" + Model.SendReceiptData.ToLowerString(), @class = "adv-checkbox-input" })
            <span class="adv-checkbox-emul"></span>
            @if (isMobile)
            {
                <span> @T("Admin.PaymentMethods.YandexKassa.SendDataForCheck")</span>
            }
        </label>
    </div>
</div>


<div class="form-group row middle-xs setting__form-group" ng-if="paymentMethod.Parameters.Protocol != '' && paymentMethod.Parameters.SendReceiptData">
    <div class="flex-grow-n setting__label @(isMobile ? "col-xs-12" : "col-fixed-size-md")">
        <span>Система налогообложения</span>
    </div>
    <div class="col-xs-12 col-md-6 relative setting--m-t-sm">
        @Html.DropDownListFor(x => x.TaxSystemCode, Model.TaxSystemCodes, new { ng_model = "paymentMethod.Parameters.TaxSystemCode", ng_init = "paymentMethod.Parameters.TaxSystemCode='" + Model.TaxSystemCode + "'", @class = "form-control input-alt" })
    </div>
</div>


<div class="form-group row middle-xs setting__form-group" ng-if="paymentMethod.Parameters.Protocol != '' && paymentMethod.Parameters.SendReceiptData">
    <div class="flex-grow-n setting__label @(isMobile ? "col-xs-12" : "col-fixed-size-md")">
        <span>ФФД подключенной кассы</span>
    </div>
    <div class="col-xs-12 col-md-6 relative setting--m-t-sm">
        @Html.DropDownListFor(x => x.TypeFfd, Model.TypesFfd, new { ng_model = "paymentMethod.Parameters.TypeFfd", ng_init = "paymentMethod.Parameters.TypeFfd='" + Model.TypeFfd + "'", @class = "form-control input-alt" })
    </div>
</div>

<div class="form-group row middle-xs setting__form-group" ng-if="@Model.ExistsUnitsWithOutMeasure.ToLowerString() && paymentMethod.Parameters.Protocol != '' && paymentMethod.Parameters.SendReceiptData && paymentMethod.Parameters.TypeFfd === '1'">
    <div class="col-xs-12 col-md-8">
        <div class="adv-panel-info setting__mobile-adv-panel-info" style="@(isMobile ? "display:flex;" : "")">
            <div>
                Имеются единицы измерения без указания меры для ФФД. <a target="_blank" href="settingscatalog?catalogTab=units&gridUnits=%7B%22WithOutMeasureType%22:true%7D">Смотреть...</a>
            </div>
        </div>
    </div>
</div>

<div class="form-group row middle-xs setting__form-group" ng-if="paymentMethod.Parameters.YaPaymentType == 'installments' || paymentMethod.Parameters.YaPaymentType == 'CR'">
    <div class="flex-grow-n setting__label setting--m-b-sm @(isMobile ? "col-xs-12" : "col-fixed-size-md")">
        <span class="text-required">Минимальная цена</span>
    </div>
    <div class="col-xs-12 col-md-6 relative setting--m-t-sm @(isMobile ? "flex middle-xs" : "")">
        <div class="input-group setting__price-margin-in-numbers">
            @Html.TextBoxFor(x => x.MinimumPrice, new { ng_model = "paymentMethod.Parameters.MinimumPrice", @class = "form-control", required = "required", validation_input_text = "Минимальная цена" })
            <div class="input-group-btn">
                <span class="btn btn-default"><span>@Model.CurrencySymbol</span></span>
            </div>
        </div>
        <help-trigger class="ng-cloak help-trigger-icon-abs @(isMobile ? "m-l-sm p-l-xs" : "")" data-title="Минимальная цена">
            Кнопка "Купить в кредит" будет отображаться у товаров превышающих минимальную цену
        </help-trigger>
    </div>
</div>

<div class="form-group row middle-xs setting__form-group" ng-if="paymentMethod.Parameters.YaPaymentType == 'installments' || paymentMethod.Parameters.YaPaymentType == 'CR'">
    <div class="flex-grow-n setting__label setting--m-b-sm @(isMobile ? "col-xs-12 control-label" : "col-fixed-size-md")">
        Максимальная цена
    </div>
    <div class="col-xs-12 col-md-6 relative @(isMobile ? "flex middle-xs" : "")">
        <div class="input-group setting__price-margin-in-numbers">
            @Html.TextBoxFor(x => x.MaximumPrice, new {ng_model = "paymentMethod.Parameters.MaximumPrice", @class = "form-control", validation_input_text = "Минимальная цена", type = "number"})
            <div class="input-group-btn">
                <span class="btn btn-default"><span>@Model.CurrencySymbol</span></span>
            </div>
        </div>
        <help-trigger class="ng-cloak help-trigger-icon-abs @(isMobile ? "m-l-sm p-l-xs" : "")" data-title="Максимальная цена">
            Кнопка "Купить в кредит" будет отображаться у товаров не превышающих максимальную цену.<br/>
            Оставьте поле пустым, если это ограничение не нужно.
        </help-trigger>
    </div>
</div>



<div class="form-group row middle-xs setting__form-group" ng-if="paymentMethod.Parameters.YaPaymentType == 'installments' || paymentMethod.Parameters.YaPaymentType == 'CR'">
    <div class="flex-grow-n setting__label setting--m-b-sm @(isMobile ? "col-xs-12" : "col-fixed-size-md")">
        <span class="text-required">Сумма первого платежа(%)</span>
    </div>
    <div class="col-xs-12 col-md-6 relative setting--m-t-sm @(isMobile ? "flex middle-xs" : "")">
        @Html.TextBoxFor(x => x.FirstPayment, new { ng_model = "paymentMethod.Parameters.FirstPayment", @class = "form-control input-alt", required = "required", validation_input_text = "Сумма первого платежа(%)" })
        <help-trigger class="ng-cloak help-trigger-icon-abs @(isMobile ? "m-l-sm p-l-xs" : "")" data-title="Сумма первого платежа(%)">
            % от стоимости товара составит первый платеж
        </help-trigger>
    </div>
</div>
