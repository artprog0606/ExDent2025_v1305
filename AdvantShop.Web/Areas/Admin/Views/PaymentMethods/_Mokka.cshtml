@model AdvantShop.Web.Infrastructure.Admin.PaymentMethods.MokkaPaymentModel

@{
    var isMobile = SettingsDesign.IsMobileTemplate;
}


<div class="form-group row middle-xs setting__form-group">
    <div class="flex-grow-n setting__label @(isMobile ? "col-xs-12" : "col-fixed-size-md")">
        <span class="text-required">Идентификатор магазина</span>
    </div>
    <div class="col-xs-12 col-md-6 relative setting--m-t-sm">
        @Html.TextBoxFor(x => x.StoreId, new { ng_model = "paymentMethod.Parameters.StoreId", @class = "form-control input-alt", required = "required", validation_input_text = "Идентификатор магазина" })
    </div>
</div>

<div class="form-group row middle-xs setting__form-group">
    <div class="flex-grow-n setting__label @(isMobile ? "col-xs-12" : "col-fixed-size-md")">
        <span class="text-required">Секретный ключ</span>
    </div>
    <div class="col-xs-12 col-md-6 relative setting--m-t-sm">
        @Html.TextBoxFor(x => x.SecretKey, new { ng_model = "paymentMethod.Parameters.SecretKey", @class = "form-control input-alt", required = "required", validation_input_text = "Секретный ключ" })
    </div>
</div>

<div class="form-group row middle-xs setting__form-group">
    <div class="flex-grow-n setting__label setting--m-b-sm @(isMobile ? "col-xs-12" : "col-fixed-size-md")">
        <span class="text-required">Минимальная цена</span>
    </div>
    <div class="col-xs-12 col-md-6 relative  @(isMobile ? "flex middle-xs" : "")">
        <div class="input-group setting__price-margin-in-numbers">
            @Html.TextBoxFor(x => x.MinimumPrice, new {ng_model = "paymentMethod.Parameters.MinimumPrice", @class = "form-control", required = "required", validation_input_text = "Минимальная цена", validation_input_min = 0})
            <div class="input-group-btn">
                <span class="btn btn-default"><span>@Model.CurrencySymbol</span></span>
            </div>
        </div>
        <help-trigger class="ng-cloak help-trigger-icon-abs  @(isMobile ? "m-l-sm p-l-xs" : "")" data-title="Минимальная цена">
            Если стоимость заказа будет ниже указанной в этом поле, то тип оплаты Мокка будет недоступен
        </help-trigger>
    </div>
</div>

<div class="form-group row middle-xs setting__form-group">
    <div class="col-xs-12 flex-grow-n setting__label setting--m-b-sm @(isMobile ? "col-xs-12" : "col-fixed-size-md")">
        Максимальная цена
    </div>
    <div class="col-xs-12 col-md-6 relative @(isMobile ? "flex middle-xs" : "")">
        <div class="input-group setting__price-margin-in-numbers">
            @Html.TextBoxFor(x => x.MaximumPrice, new {ng_model = "paymentMethod.Parameters.MaximumPrice", @class = "form-control", validation_input_text = "Минимальная цена", type = "number"})
            <div class="input-group-btn">
                <span class="btn btn-default"><span>@Model.CurrencySymbol</span></span>
            </div>
        </div>
        <help-trigger class="ng-cloak help-trigger-icon-abs  @(isMobile ? "m-l-sm p-l-xs" : "")" data-title="Максимальная цена">
            Если стоимость заказа будет выше указанной в этом поле, то тип оплаты Мокка будет недоступен.<br/>
            Оставьте поле пустым, если это ограничение не нужно.
        </help-trigger>
    </div>
</div>

<div class="form-group row middle-xs setting__form-group">
    <div class="col-xs-12 flex-grow-n setting__label setting--m-b-sm @(isMobile ? "col-xs-12" : "col-fixed-size-md")">
        <span class="text-required">Максимальное кол-во месяцев займа</span>
    </div>
    <div class="col-xs-12 col-md-6 relative @(isMobile ? "flex middle-xs" : "")">
        @Html.TextBoxFor(x => x.NumberOfParts, new {ng_model = "paymentMethod.Parameters.NumberOfParts", @class = "form-control input-alt", required = "required", validation_input_text = "Максимальное кол-во месяцев займа", validation_input_min = 0})
        <help-trigger class="ng-cloak help-trigger-icon-abs  @(isMobile ? "m-l-sm p-l-xs" : "")" data-title="Максимальное кол-во месяцев займа">
            В карточке товара под основной ценой будет отображаться цена первого платежа, которая будет равна цене товара разбитая на указанное кол-во
        </help-trigger>
    </div>
</div>

<div class="form-group row middle-xs setting__form-group">
    @if (!isMobile)
    {
        <div class="col-xs-12 flex-grow-n col-fixed-size-md">
            <span class="text-required">Передавать в заявке статистику по клиенту</span>
        </div>
    }
    <div class="col-xs-12 col-md-6 relative @(isMobile ? "flex middle-xs" : "")">
        <label class="adv-checkbox-label form-label-block  @(isMobile ? "flex-grow" : "")">
            @Html.CheckBoxFor(x => x.SendStatistic, new { ng_model = "paymentMethod.Parameters.SendStatistic", @class = "adv-checkbox-input" })
            <span class="adv-checkbox-emul"></span>
            @if (isMobile)
            {
            <span class="text-required m-l-sm flex-grow">Передавать в заявке статистику по клиенту</span>
            }
        </label>
        <help-trigger data-title="Передавать в заявке статистику по клиенту" class=" @(isMobile ? "m-l-sm p-l-xs" : "")">
            Будут передаваться дата регистрации, суммма и кол-во оплаченных заказов. Это влияет на одобрение кредита.
        </help-trigger>
    </div>
</div>

<div class="form-group row middle-xs setting__form-group" ng-show="paymentMethod.Parameters.SandboxServer">
    @if (!isMobile)
    {
        <div class="col-xs-12 flex-grow-n col-fixed-size-md">
            <span class="text-required">Использовать тестовый сервер</span>
        </div>
    }
    <div class="col-xs-12 col-md-6 relative">
        <label class="adv-checkbox-label form-label-block">
            @Html.CheckBoxFor(x => x.SandboxServer, new { ng_model = "paymentMethod.Parameters.SandboxServer", @class = "adv-checkbox-input" })
            <span class="adv-checkbox-emul"></span>
            @if (isMobile)
            {
                <span class="text-required m-l-sm">Использовать тестовый сервер</span>
            }
        </label>
    </div>
</div>


<div class="form-group row middle-xs">
    <div class="col-xs-12 col-md-8">
        <div class="adv-panel-info ">
            Необходимо дополнительно установить модуль <a href="@Url.AbsoluteActionUrl("Market", "Modules", new {name = "mokka"})" target="_blank">Мокка</a>.
        </div>
    </div>
</div>
