@model AdvantShop.Web.Infrastructure.Admin.PaymentMethods.InvoiceBoxPaymentModel

@{
    var isMobile = SettingsDesign.IsMobileTemplate;
}

<div class="form-group row middle-xs setting__form-group">
    <div class="flex-grow-n setting__label @(isMobile ? "col-xs-12" : "col-fixed-size-md")">
        <span class="text-required">@T("Admin.PaymentMethods.InvoiceBox.StoreIdentifier")</span>
    </div>
    <div class="col-xs-12 col-md-6 relative setting--m-t-sm @(isMobile ? "flex middle-xs" : "")">
        @Html.TextBoxFor(x => x.ShopId, new { ng_model = "paymentMethod.Parameters.ShopId", @class = "form-control input-alt", required = "required", validation_input_text = T("Admin.PaymentMethods.InvoiceBox.StoreIdentifier") })
        <help-trigger class="ng-cloak help-trigger-icon-abs @(isMobile ? "m-l-sm p-l-xs" : "")" data-title="@T("Admin.PaymentMethods.InvoiceBox.StoreIdentifier")">
            @T("Admin.PaymentMethods.InvoiceBox.ReceivedStoreId")
        </help-trigger>
    </div>
</div>

<div class="form-group row middle-xs setting__form-group">
    <div class="flex-grow-n setting__label @(isMobile ? "col-xs-12" : "col-fixed-size-md")">
        <span class="text-required">@T("Admin.PaymentMethods.InvoiceBox.RegionalCodeStore")</span>
    </div>
    <div class="col-xs-12 col-md-6 relative setting--m-t-sm @(isMobile ? "flex middle-xs" : "")">
        @Html.TextBoxFor(x => x.ShopId2, new { ng_model = "paymentMethod.Parameters.ShopId2", @class = "form-control input-alt", required = "required", validation_input_text = T("Admin.PaymentMethods.InvoiceBox.RegionalCodeStore") })
        <help-trigger class="ng-cloak help-trigger-icon-abs @(isMobile ? "m-l-sm p-l-xs" : "")" data-title="@T("Admin.PaymentMethods.InvoiceBox.RegionalCodeStore")">
            @T("Admin.PaymentMethods.InvoiceBox.ReceviedReginaolCode")
        </help-trigger>
    </div>
</div>


<div class="form-group row middle-xs setting__form-group">
    <div class="flex-grow-n setting__label @(isMobile ? "col-xs-12" : "col-fixed-size-md")">
        <span class="text-required">@T("Admin.PaymentMethods.InvoiceBox.SecurityKey")</span>
    </div>
    <div class="col-xs-12 col-md-6 relative setting--m-t-sm @(isMobile ? "flex middle-xs" : "")">
        @Html.TextBoxFor(x => x.SecretKey, new { ng_model = "paymentMethod.Parameters.SecretKey", @class = "form-control input-alt", required = "required", validation_input_text = T("Admin.PaymentMethods.InvoiceBox.SecurityKey").ToString() })
        <help-trigger class="ng-cloak help-trigger-icon-abs @(isMobile ? "m-l-sm p-l-xs" : "")" data-title="@T("Admin.PaymentMethods.InvoiceBox.SecurityKey")">
            @T("Admin.PaymentMethods.InvoiceBox.ReceivedSecurityKey")
        </help-trigger>
    </div>
</div>


<div class="form-group row middle-xs setting__form-group">
    <div class="flex-grow-n setting__label @(isMobile ? "col-xs-12" : "col-fixed-size-md")">
        @T("Admin.PaymentMethods.OnvoiceBox.TypeOfPayer")
    </div>
    <div class="col-xs-12 col-md-6 relative setting--m-t-sm @(isMobile ? "flex middle-xs" : "")">
        @Html.DropDownListFor(x => x.TypePayer, Model.TypePayers, new { ng_model = "paymentMethod.Parameters.TypePayer", ng_init = "paymentMethod.Parameters.TypePayer='" + Model.TypePayer + "'", @class = "form-control input-alt" })

        <help-trigger class="ng-cloak @(isMobile ? "m-l-sm p-l-xs" : "help-trigger-icon-abs")" data-title="@T("Admin.PaymentMethods.OnvoiceBox.TypeOfPayer")">
            @T("Admin.PaymentMethods.InvoiceBox.Attention")
        </help-trigger>
    </div>
</div>

<div class="form-group row middle-xs">
    @if (!isMobile)
    {
        <div class="flex-grow-n setting__label @(isMobile ? "col-xs-12" : "col-fixed-size-md")">
            @T("Admin.PaymentMethods.InvoiceBox.TestMode")
        </div>
    }
    <div class="col-xs-12 col-md-6 relative setting--m-t-sm @(isMobile ? "flex middle-xs" : "")">
        <label class="adv-checkbox-label form-label-block">
            @Html.CheckBoxFor(x => x.TestMode, new { ng_model = "paymentMethod.Parameters.TestMode", ng_init = "paymentMethod.Parameters.TestMode=" + Model.TestMode.ToLowerString(), @class = "adv-checkbox-input", validation_input_text = T("Admin.PaymentMethods.InvoiceBox.TestMode").ToString() })
            <span class="adv-checkbox-emul"></span>
        </label>
        @if (isMobile)
        {
            <label for="TestMode" class="col-xs setting__label">
                @T("Admin.PaymentMethods.InvoiceBox.TestMode")
            </label>
        }
        <help-trigger class="ng-cloak @(isMobile ? "m-l-sm p-l-xs" : "")" data-title="@T("Admin.PaymentMethods.InvoiceBox.TestMode")">
            @T("Admin.PaymentMethods.InvoiceBox.TestModePayments")
        </help-trigger>
    </div>
</div>

