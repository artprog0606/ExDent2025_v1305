@using AdvantShop.Trial
@model AdvantShop.Web.Admin.ViewModels.Shared.Dashboard.CommonDashboardInfoViewModel
@{
    var isMobile = SettingsDesign.IsMobileTemplate;
    var ngHref = isMobile ? "{{site.EditUrl}}" : "{{site.ViewUrl}}";
    var targetBlank = isMobile ? "" : "target=\"_blank\"";
}

@{
    var headerModel = new AdvantShop.Web.Admin.ViewModels.Shared.Common.HeaderViewModel();

    headerModel.ShowOnlySticky = !isMobile;
    headerModel.Title = T("Admin.Dashboard.MyWebsites").ToString();
    headerModel.Controls = new List<IButton>();
    headerModel.Controls.Add(new ButtonModel()
    {
        ColorType = eColorType.Secondary,
        Modificators = new List<eButtonModificators>()
        {
            eButtonModificators.OnlyIcon
        },
        Link = Model.AddNewAllowed ? Url.AbsoluteActionUrl("CreateSite") : null,
        Icon = new ButtonIcon()
        {
            SvgName = "plus-alt",
            Attributes = new { width = 16, height = 16 }
        },
       Attributes = new string[] { !Model.AddNewAllowed ? "disabled" : null}
    });
}

@Html.Header(headerModel)

@if (!isMobile)
{
    <div class="balance__padding-page ng-cloack hidden-xs visible-md">
        <div class="dashboard-balance__block m-b-md m-t-md">
            <div class="flex middle-xs">

                @* 338px - width MainProjectSite block;  139 - GoToTheSite block; 18 - padding*@
                <div class="col-xs" data-ng-controller="ChangeAdminShopNameCtrl as changeAdminShopName" ng-style="{width: 'calc(100%' + (dashboardSites.data.Sites.length > 0 ? ' - 338px' : '0') + (dashboardSites.data.SelectedDomain != null ? ' - 139px - 18px' : '') + ')'}">

                    @{
                        string shopname = SettingsMain.AdminShopName.IsNotEmpty() ? SettingsMain.AdminShopName : (SettingsMain.AdminShopName = TrialService.IsTrialEnabled ? SettingsMain.ShopName : SettingsMain.SiteUrl.Replace("http://", "").Replace("https://", "").Replace("www.", ""));
                    }
                    <div class="flex middle-xs ng-cloak" shop-name shop-name-callback="changeAdminShopName.shopname = shopName">
                        <h1 class="title-page__dashboard text-overflow" ng-bind="changeAdminShopName.shopname || shopName">@shopname</h1>
                        <ui-modal-trigger data-controller="'ModalChangeAdminShopNameCtrl'"
                                          template-url="@Html.GetAssetPath("ChangeAdminShopName.html")"
                                          data-resolve="{data: {name: changeAdminShopName.shopname}}"
                                          data-on-close="changeAdminShopName.decodeAndSetShopName(result.name)">
                            <a href="" class="top-menu-shopname-edit fas fa-pencil-alt" title="@T("Admin.Common.TopMenu.Change")"></a>
                        </ui-modal-trigger>
                    </div>
                </div>

                <div class="col-xs-slim ng-cloak" ng-if="dashboardSites.data.Sites != null && dashboardSites.data.Sites.length > 0">
                    <div class="flex middle-xs between-xs">
                        <div class="col-xs">
                            <button class="flex middle-xs center-xs select-main-site relative" for="selectMainSite" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <div class="col-xs-slim">
                                    <div class="select-main-site__block">
                                        <span class="full-width select-main-site__title">@T("Admin.Dashboard.MainProjectSite")</span>
                                        <span class="full-width select-main-site__text" ng-if="dashboardSites.data.SelectedDomain != null">
                                            <span ng-bind="dashboardSites.data.SelectedDomain.TypeStr + ':&nbsp'"></span>
                                            <span class="select-main-site__select-domain-name" ng-bind="dashboardSites.data.SelectedDomain.Name"></span>
                                        </span>
                                        <svg class="select-main-site__icon absolute" width="12" height="7" viewBox="0 0 12 7" fill="none" xmlns="http://www.w3.org/2000/svg">
                                            <path d="M1.42259 0.577411C1.09715 0.251975 0.569515 0.251975 0.244078 0.577411C-0.0813592 0.902848 -0.0813592 1.43049 0.244078 1.75592L5.24408 6.75592C5.56952 7.08136 6.09715 7.08136 6.42259 6.75592L11.4226 1.75592C11.748 1.43049 11.748 0.902848 11.4226 0.577411C11.0972 0.251975 10.5695 0.251975 10.2441 0.577411L5.83333 4.98816L1.42259 0.577411Z" fill="#2D9CEE" />
                                        </svg>
                                    </div>
                                </div>
                            </button>
                            <div class="dashoboard-dropdown__block dropdown-menu">
                                <div class="dashoboard-dropdown__item-wrap" ng-repeat="item in dashboardSites.data.Domains">
                                    <button class="dashoboard-dropdown__item text-left" ng-click="dashboardSites.changeMainUrl(item)">
                                        <span>{{item.TypeStr}}:&nbsp;</span>
                                        <span>{{item.Name}}</span>
                                    </button>
                                </div>
                            </div>
                        </div>

                        <div class="col-xs-slim p-r-none" ng-if="dashboardSites.data.SelectedDomain != null">
                            <a href="{{dashboardSites.data.SelectedDomain.Url}}" class="link-alternative" target="_blank">
                                @T("Admin.Dashboard.GoToTheSite")
                                <svg width="12" height="12" viewBox="0 0 12 12" fill="none" xmlns="http://www.w3.org/2000/svg" class="m-l-sm">
                                    <path fill-rule="evenodd" clip-rule="evenodd" d="M3.707 0V2.001H8.292L0 10.293L1.414 11.707L9.706 3.415V8H11.707V0H3.707Z" fill="currentColor" />
                                </svg>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<div class="balance__padding-page--bg-white balance__padding-page balance__padding-page--m-t-n" style="height: 100%;">
    <div class="dashboard-balance__block @(isMobile ? "" : "p-t-xl")">
        @if (!isMobile)
        {
            <div class="sticky-page-name">
                <div class="sticky-page-name-inner flex ">
                    <div class="col-xs-12 col-md-9 dashboard-col-custom-9 ng-cloak">
                        <div class="row middle-xs dashboard-current-site__name-wrap">
                            <div class="flex align-center">
                                <div class="page-name-block-item-main">
                                    <h1 class="dashboard-current-site__name page-head__name sticky-page-name-text inline bottom-cell m-r-xs">
                                        @T("Admin.Dashboard.MyWebsites")
                                    </h1>
                                </div>
                                <div class="flex">
                                    <div>
                                        @if (Model.AddNewAllowed)
                                        {
                                            <a class="btn-minimalist fs-md" href="@Url.AbsoluteActionUrl("CreateSite")">
                                                @T("Admin.Dashboard.MyWebsitesLink")
                                            </a>
                                        } else {
                                            <span class="btn-minimalist fs-md btn btn--disabled">
                                                @T("Admin.Dashboard.MyWebsitesLink")
                                            </span>
                                        }
                                    </div>
                                    @*<div class="m-l">
                                            <a class="dashboard-page__link link-alternative fs-md" href="" ng-click="dashboardSites.createScreenShots()">
                                                Сделать скриншоты
                                            </a>
                                        </div>*@
                                </div>
                            </div>
                            @if(Model.IsSaas)
                            {
                                <div class="flex font-size-md color-gray @(!Model.AddNewAllowed ? "text-danger" : "")">
                                    @T("Admin.Dashboard.TotalSites") @Model.CurrentSitesCount/@Model.AllowedSitesCount
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }else{
              if(Model.IsSaas)
              {
                  <div class="dashboard-total-sites--mobile @(!Model.AddNewAllowed ? "text-danger" : "")">
                      @T("Admin.Dashboard.TotalSites") @Model.CurrentSitesCount/@Model.AllowedSitesCount
                  </div>
              }    
        }
        <div class="row m-t-sm start-xs dashboard__list-sites" ng-class="{'progress-overlay' : !dashboardSites.isLoadedDashboard}">
            <div class="col-xs-12 col-md-9 dashboard-col-custom-9 ng-cloak">
                <div class="ibox dashboard-site container-fluid" ng-repeat="site in dashboardSites.data.Sites track by site.Id">
                    <div class="ibox-content dashboard-site__block row">
                        <div class="col-xs-12 col-md-4 col-md-slim">
                            <a ng-href="@ngHref" @targetBlank class="landing-link-iframe">
                                @*href="{{site.ViewUrl}}"*@
                                <span ng-if="site.ScreenShot != null && site.ScreenShot.length > 0" @Html.Raw(isMobile ? "class=\"flex start-xs top-xs\"" : null)>
                                    <img height="200"
                                         width="233"
                                         ng-src="{{site.ScreenShot}}" />
                                </span>
                                <span ng-if="site.ScreenShot == null">
                                    <iframe sandbox="allow-same-origin allow-scripts" onload="this.src != null && this.src.length > 0 ? this.nextElementSibling.classList.add('ng-hide') : null;" scrolling="no" frameborder="0"
                                            lozad-adv="dashboardSites.scrollToActiveElement(site.Id, site.PreviewIframeUrl)"
                                            ng-src="{{dashboardSites.getUrl(dashboardSites.siteIframes[site.Id])}}"
                                            ng-style="dashboardSites.initScaleIframe[site.Id]"
                                            ng-init="dashboardSites.initScaleIframe[site.Id] = dashboardSites.scaleIframeDashboardSites()"
                                            class="landing-block-preview">
                                    </iframe>
                                    <span class="landing-block-preview-loading"></span>
                                </span>
                            </a>
                            @if (!isMobile)
                            {
                                <div class="dashboard-site-actions flex flex-wrap center-xs">
                                    <div ng-if="site.Domain != null">
                                        <a class="link-alternative link-gray link-decoration-invert inline-flex middle-xs" target="_blank" ng-href="{{site.ViewUrl}}">
                                            {{site.Domain}}
                                            <svg viewBox='0 0 512 512' height='15' width='15' fill='#a29393' style='color: #a29393; padding-left: 5px'>
                                                <path d='M488.727,0H302.545c-12.853,0-23.273,10.42-23.273,23.273c0,12.853,10.42,23.273,23.273,23.273h129.997L192.999,286.09
			                                    c-9.087,9.087-9.087,23.823,0,32.912c4.543,4.543,10.499,6.816,16.455,6.816c5.956,0,11.913-2.273,16.455-6.817L465.455,79.458
			                                    v129.997c0,12.853,10.42,23.273,23.273,23.273c12.853,0,23.273-10.42,23.273-23.273V23.273C512,10.42,501.58,0,488.727,0z' />
                                                <path d='M395.636,232.727c-12.853,0-23.273,10.42-23.273,23.273v209.455H46.545V139.636H256c12.853,0,23.273-10.42,23.273-23.273
			                                    S268.853,93.091,256,93.091H23.273C10.42,93.091,0,103.511,0,116.364v372.364C0,501.58,10.42,512,23.273,512h372.364
			                                    c12.853,0,23.273-10.42,23.273-23.273V256C418.909,243.147,408.489,232.727,395.636,232.727z' />
                                            </svg>
                                        </a>


                                        <div>
                                            <a ng-if="dashboardSites.data.UseDomainsManager"
                                               href="@Url.AbsoluteActionUrl("Domains", "Store")" class="link-alternative link-decoration-invert">
                                                @T("Admin.Dashboard.ChangeDomain")
                                            </a>

                                        </div>
                                    </div>
                                    <div ng-if="site.Domain == null">
                                        <div ng-if="site.Id == -1">@T("Admin.Dashboard.DomainNotConnected")</div>
                                        <div ng-if="site.Id != -1">

                                            <a href="{{site.Domain}}" class="link-alternative link-decoration-invert" target="_blank" title='@T("Admin.Dashboard.GoToTheSite")'>
                                                <span>{{site.Domain}}</span>
                                            </a>
                                            <br />
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                        <div class="col-xs-12 col-md-8 col-md">
                            <div class="dashboard-site-content">
                                @if (isMobile)
                                {
                                    <a ng-href="@ngHref" class="dashboard-site__icon" ng-switch="site.Type === 0">
                                        @Html.SvgSprite("cart", "", new { width = 20, height = 20, ng_switch_when = "true" })
                                        @Html.SvgSprite("funnel", "", new { width = 20, height = 20, ng_switch_when = "false" })
                                    </a>
                                }
                                <div class="dashboard-site-name @(isMobile ? "" : "flex between-xs start-md flex-wrap middle-xs m-b")">


                                    @if (isMobile)
                                    {
                                        <a ng-href="@ngHref" class="text-decoration-none link-terna">
                                            <span class="dashboard-site__name-text" ng-bind="site.Name"></span>
                                            <span class="dashboard-site__type-text" ng-bind="site.TypeStr"></span>
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="dashboard-site__name-text m-r-sm" ng-bind="site.Name"></span>
                                        <button ng-if="site.Id != -1"
                                                ng-class="{'site__enabled-toggle--on': site.Published, 'site__enabled-toggle--off': !site.Published}"
                                                data-ng-click="dashboardSites.changeEnabled(site)"
                                                data-ng-bind="site.Published ? '@T("Admin.Dashboard.BtnPublished")' : '@T("Admin.Dashboard.BtnNotPublished")'"
                                                class="btn site__enabled-toggle m-r-xs hidden-xs visible-md">
                                        </button>
                                        <button class="btn dashboard-btn-main__site" ng-if="site.IsMainSite" ng-class="{'dashboard-btn-main__site--active' : site.IsMainSite}">
                                            @T("Admin.Dashboard.MainSite")
                                        </button>
                                    }
                                </div>
                                @if (isMobile)
                                {
                                    <div class="dashboard-site__more">
                                        @{
                                            var moreButtonModel = new MoreButtonModel();
                                            moreButtonModel.ColorType = eColorType.Tertiary;
                                            moreButtonModel.Size = eButtonSize.Default;
                                            moreButtonModel.NgTemplateId = "moreButtonDashboard";
                                            moreButtonModel.Text = T("Больше");
                                            moreButtonModel.Icon = new ButtonIcon()
                                            {
                                                SvgName = "more",
                                                Attributes = new { width = 24, height = 24 }
                                            };
                                            moreButtonModel.Modificators = new List<eButtonModificators>
                                                                                                                                                            {
                                                eButtonModificators.OnlyIcon
                                            };
                                            moreButtonModel.Items = new List<MoreButtonPopoverItem>();
                                            moreButtonModel.Items.Add(new MoreButtonPopoverItem()
                                            {
                                                Text = T("Admin.Dashboard.GoToWebsite"),
                                                ColorType = eColorType.Link,
                                                Modificators = new List<eButtonModificators>()
                                                                                                                                                                {
                                                    eButtonModificators.HorizontalPaddingZero
                                                },
                                                Link = "{{site.Domain || site.ViewUrl}}",
                                                Attributes = new string[] { "target=\"_blank\"" },
                                                Icon = new ButtonIcon()
                                                {
                                                    SvgName = "go",
                                                    CssClass = "link",
                                                    Attributes = new { width = 24, height = 24 }
                                                }
                                            });

                                            moreButtonModel.Items.Add(new MoreButtonPopoverItem()
                                            {
                                                Text = T("Admin.Dashboard.BtnEdit"),
                                                ColorType = eColorType.Link,
                                                Modificators = new List<eButtonModificators>()
                                                                                                                                                                {
                                                    eButtonModificators.HorizontalPaddingZero
                                                },
                                                Link = "{{site.EditUrl}}",
                                                Icon = new ButtonIcon()
                                                {
                                                    SvgName = "edit2",
                                                    CssClass = "link",
                                                    Attributes = new { width = 24, height = 24 }
                                                }
                                            });

                                            moreButtonModel.Items.Add(new MoreButtonPopoverItem()
                                            {
                                                Text = T("Admin.Dashboard.SetAsMain"),
                                                ColorType = eColorType.Link,
                                                Modificators = new List<eButtonModificators>()
                                                                                                                                                                {
                                                    eButtonModificators.HorizontalPaddingZero
                                                },
                                                RowAttributes = new { ng_if = "site.Domain != null" },
                                                Attributes = new string[] { "ng-click=\"dashboardSites.changeMainUrl({Url: site.Domain})\"" },
                                                Icon = new ButtonIcon()
                                                {
                                                    SvgName = "cog",
                                                    CssClass = "link",
                                                    Attributes = new { width = 24, height = 24, fill = "red" }
                                                }
                                            });


                                            moreButtonModel.Items.Add(new MoreButtonPopoverItem()
                                            {
                                                Text = T("Admin.Dashboard.WebsiteQRCode"),
                                                ColorType = eColorType.Link,
                                                Modificators = new List<eButtonModificators>()
                                                {
                                                    eButtonModificators.HorizontalPaddingZero
                                                },
                                                WrapStart = "<ui-modal-trigger data-controller=\"'ModalQrCodeGeneratorCtrl'\" template-url=\"" + Html.GetAssetPath("qrCodeGenerator.html") + "\" data-resolve=\"{params: {text: (site.Domain || site.ViewUrl)}}\" >",
                                                WrapEnd = "<ui-modal-trigger/>",
                                                Icon = new ButtonIcon()
                                                {
                                                    SvgName = "qr-code",
                                                    Attributes = new { width = 24, height = 24 }
                                                }
                                            });

                                            moreButtonModel.Items.Add(new MoreButtonPopoverItem()
                                            {
                                                Text = T("Admin.Dashboard.Remove"),
                                                Modificators = new List<eButtonModificators>()
                                                                                                                                                                {
                                                    eButtonModificators.HorizontalPaddingZero
                                                },
                                                Type = eButtonType.Link,
                                                ColorType = eColorType.Danger,
                                                Attributes = new string[] { "ng-click=\"dashboardSites.deleteSite(site)\"" },
                                                Icon = new ButtonIcon()
                                                {
                                                    SvgName = "remove",
                                                    Attributes = new { width = 24, height = 24 }
                                                }
                                            });
                                        }
                                        @Html.MoreButton(moreButtonModel)
                                    </div>
                                }
                                else
                                {
                                    <span class="dashboard-site--secondary-text"><span class="hidden-xs visible-md">@T("Admin.Dashboard.TypeSite"): &nbsp;</span> {{site.TypeStr}}</span>

                                    <div class="dashboard-btn__block">
                                        <a href="{{site.ViewUrl}}" class="btn btn-submit flex-grow" target="_blank">
                                            {{site.Type == 0 ? '@T("Admin.Common.TopMenu.ShopWindow")' : '@T("Admin.Dashboard.Index.ViewSite")'}}
                                        </a>
                                        <a href="{{site.EditUrl}}" class="btn btn-default dashboard-site-actions__button-edit">@T("Admin.Dashboard.BtnEdit")</a>
                                    </div>
                                }
                            </div>
                        </div>
                        @if (!isMobile)
                        {
                            <div ng-if="site.Domain || site.ViewUrl" class="qr-code-site-wrap" style="right: 58px;">
                                <ui-modal-trigger data-controller="'ModalQrCodeGeneratorCtrl'"
                                                  template-url="@Html.GetAssetPath("qrCodeGenerator.html")"
                                                  data-resolve="{params: {text: (site.Domain || site.ViewUrl)}}">
                                    <a href="" title="@T("Admin.Dashboard.Index.QRCode")">
