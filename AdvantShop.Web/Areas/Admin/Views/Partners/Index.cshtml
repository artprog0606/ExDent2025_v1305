<div class="ibox static-notify ng-cloak" style="@(isMobile ? "" : "padding-top:2px;")" ng-show="partners.couponTplExists === false">
    <div class="ibox-content @(isMobile ? "m-b-md" : "p-xs-x2")">
        <span class="label label-notice @(isMobile ? "" : "m-r")">
            @if (isMobile)
            {
                <span>Внимание!</span>
            }
            else
            {
                <span>Внимание</span>
            }
        </span>
        <span class="">Для регистрации партнеров необходимо настроить шаблон партнерского купона.</span>
        <ui-modal-trigger data-controller="'ModalAddEditCouponCtrl'" controller-as="ctrl" size="middle"
                          template-url="@Html.GetAssetPath("addEditCoupon.html")"
                          data-resolve="{couponMode: @AdvantShop.Catalog.CouponMode.PartnersTemplate.ConvertIntString()}"
                          data-on-close="partners.checkPartnerCouponTpl()">
            <a href="">Настроить шаблон</a>
        </ui-modal-trigger>
    </div>
</div>

<div class="ibox">
    <div class="ibox-content no-top-border">
        <ui-grid-custom grid-unique-id="grid"
                        grid-on-init="partners.gridOnInit(grid)"
                        grid-options="partners.gridOptions"
                        grid-url="'partners/getPartners'"
                        grid-extend-ctrl="partners"
                        grid-swipe-line="true">
            <ui-grid-custom-override-control class="ng-cloak">
                <div class="card card--gap-row-sm">

                    <div>
                        <div class="m-b-xs setting__label">{{row.entity.Name}}</div>
                        <div class="m-b-xs fs-xs">{{row.entity.Email}}</div>
                        <div class="m-b-xs fs-xs">{{row.entity.Phone}}</div>
                        <div class="m-b-xs fs-xs">{{row.entity.TypeFormatted}}</div>
                        <div class="fs-xs flex middle-xs between-xs">
                            <div>
                                <span>{{row.entity.Balance}}</span>
                                <span ng-if="row.entity.Type == 2">руб.</span>
                            </div>
                            <div>{{row.entity.DateCreatedFormatted}}</div>
                        </div>
                    </div>
                </div>
            </ui-grid-custom-override-control>
            <ui-grid-custom-footer class="ui-grid-custom-footer" ng-bind="partners.grid.gridOptions.TotalString">
            </ui-grid-custom-footer>
        </ui-grid-custom>
    </div>
</div>
