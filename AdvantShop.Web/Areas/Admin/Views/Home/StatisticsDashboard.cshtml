<div class="ibox statistics-block">
    <div class="ibox-content statistics-block__body">
        @if (!SettingsDesign.IsMobileTemplate)
        {
            <div class="ibox-tools statistics-block__tools">
                <ui-modal-trigger template-url="statisticsModal.html">
                    <a class="dropdown-toggle" data-e2e-indicators="IndicatorsShow" href="#" data-bs-toggle="modal" data-target="#statisticsModal">
                        <i class="fa fa-cog"></i>
                    </a>
                </ui-modal-trigger>
            </div>
        }
        @if (!Model.AnyActive)
        {
            <ui-modal-trigger template-url="statisticsModal.html">
                @if (isMobile == false)
                {
                    <div class="statistics-block-choose-id dropdown-toggle statistics-block__choose-id-link-wrap">
                        <a class="choose-id-link" data-e2e-no-indicators="IndicatorsShow" href="#" data-bs-toggle="modal" data-target="#statisticsModal">@T("Admin.Home.StatisticsDashboard.ShowIndicators")</a>
                    </div>
                }
                else
                {
                    @Html.Button(T("Admin.Home.StatisticsDashboard.ShowIndicators"), eButtonType.Add, modificators: new List<eButtonModificators>() { eButtonModificators.FullWidth }, attributes: new string[] { "data-e2e-no-indicators=\"IndicatorsShow\"" }, wrapStart: "<ui-modal-trigger template-url=\"statisticsModal.html\">", wrapEnd: "</ui-modal-trigger>")
