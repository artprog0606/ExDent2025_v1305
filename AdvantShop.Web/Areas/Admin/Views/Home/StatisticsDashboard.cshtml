                                <span class="adv-checkbox-emul"></span>
                                @T("Admin.Home.StatisticsDashboard.TotalLeadsYesterdayCount")                                
                            </label>
                        </div>
                    </div>
                    <div class="col-xs-6">
                        <div class="form-group label-wrap">
                            <label for="ShowTotalLeadsMonth" class="adv-checkbox-label category-label">
                                @Html.CheckBoxFor(m => m.ShowTotalLeadsMonth, new { @class = "adv-checkbox-input", data_e2e_dashboard_check = "LeadsMonthCount" })
                                <span class="adv-checkbox-emul"></span>
                                @T("Admin.Home.StatisticsDashboard.TotalLeadsMonthCount")
                            </label>

                        </div>

                        <div class="form-group label-wrap">
