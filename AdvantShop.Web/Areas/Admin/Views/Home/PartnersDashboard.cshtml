@model AdvantShop.Web.Admin.ViewModels.Home.PartnersDashboardViewModel
@{
    var carouselAttrs = "data-carousel data-stretch=\"true\" data-dots=\"true\" data-prev-icon=\"fa fa-angle-left carousel-partners-arrow\" data-next-icon=\"fa fa-angle-right carousel-partners-arrow\" data-speed=\"700\" data-auto=\"true\" data-visible-max=\"1\"";
    var isMobile = SettingsDesign.IsMobileTemplate;

}

<div class="ibox float-e-margins">
    <div class="ibox-content partners-block">
        <h3 class="partners-title partners-block__title">@T("Admin.Home.PartnersDashboard.Title")</h3>
        <div class="carousel carousel-partners partners-block__carousel">
            <div class="carousel-inner partners-block__carousel-inner">
                <ul class="partners-list flex carousel-list partners-block__partner-list"
                    @(!isMobile ? Html.Raw(carouselAttrs) : null)>

                    @for (var i = 0; i < Model.News.Count; i++)
                    {
                        <li class="carousel-partners-item partners-block__partner-item">
                            <a href="@Model.News[i].LinkSrc" 
                               class="partners-block__partner-link"
                               target="_blank" 
                               onclick="return advTrack('@AdvantShop.Track.ETrackEvent.Core_Common_PartnersDashboard_ClickBanner.ToString()');">
                                @if (Model.News[i].Picture != null)
                                {
                                    <img @Html.Raw((!isMobile ? i == 0  ? "src" : "data-src" : "src") + "=\"" + Model.News[i].Picture + "\"") alt="@Html.AttributeEncode(Model.News[i].Name)" />
                                }
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>
