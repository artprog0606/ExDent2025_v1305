        moreButton.Attributes = new string[] {"ng-if=\"staticPages.settingsTab === 'pages'\""};
        moreButton.Items = new List<MoreButtonPopoverItem>()
        {
            new MoreButtonPopoverItem()
            {
                ColorType = eColorType.Link,
                Modificators = new List<eButtonModificators>()
                {
                    eButtonModificators.HorizontalPaddingZero
                },
                RowAttributes = new {ng_if = "staticPages.settingsTab === 'pages'"},
                Text = T("Admin.StaticPages.Index.Blocks"),
                Attributes = new string[] {"ng-click=\"staticPages.changeSettingsTab('blocks'); staticPages.isOpenPopover = false\" ng-init=\"staticPages.isOpenPopover = true\""},
            }
        };

        headerModel.Controls.Add(moreButton);
        @Html.Header(headerModel)
