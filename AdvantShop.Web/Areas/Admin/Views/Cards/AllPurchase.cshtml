@using AdvantShop.Core.Services.Admin
@using AdvantShop.Web.Admin.Extensions;
@model AdvantShop.Web.Infrastructure.Handlers.AbstractFilterResult<AdvantShop.Core.Services.Bonuses.Model.Purchase>

@{
    var isMobile = SettingsDesign.IsMobileTemplate;

    if (AdminAreaTemplate.IsAdminv3() && !isMobile)
    {
        Layout = "~/Areas/Admin/Templates/" + AdminAreaTemplate.Current + "/Views/BonusSystem/_BonusSystemLayout.cshtml";
    }

    Html.AddAsset("cards");

    var headerModel = new AdvantShop.Web.Admin.ViewModels.Shared.Common.HeaderViewModel();
    headerModel.Title = "<span class=\"float-header-page\">" + T("Admin.Cards.AllPurchase.SalesHistory") + "</span>";
    headerModel.ShowOnlySticky = true;
    headerModel.EnabledBack = true;
    headerModel.Back = new AdvantShop.Web.Admin.ViewModels.Shared.Common.BackViewModel()
    {
        Url = Url.AbsoluteActionUrl("Edit", "Cards", new { id = ViewBag.CardId })
    };

    @Html.Header(headerModel)
}

@if (!isMobile) {
    @section BlockAdditional {
        @Html.Partial("~/Areas/Admin/Templates/AdminV3/Views/BonusSystem/_AnalyticsLink.cshtml")
    }
}

<div class="ibox">
    <div class="ibox-content">
        @if (!isMobile)
        {
            @Html.Back("Карта", Url.AbsoluteActionUrl("Edit", "Cards", new { id = ViewBag.CardId }))
            <h2 class="m-b-sm clearfix setting__subtitle">@T("Admin.Cards.AllPurchase.SalesHistory")</h2>
        }
        <div class="@(isMobile ? "" : "m-b")">
            <div class="row">
                <div class="col-xs-12 setting__table-wrap @(isMobile ? "m-b" : "")">
                    <table class="table table-striped table-bordered table-condensed">
                        <thead>
                            <tr>
                                <th style="@(isMobile ? "min-width:80px;" : "width: 90px;")">
                                    @T("Admin.Cards.LastPurchase.SaleID")
                                </th>
                                <th style="@(isMobile ? "min-width:80px;" : "width: 130px;")">
                                    @T("Admin.Cards.LastPurchase.OrderNumber")
                                </th>
                                <th style="@(isMobile ? "width: 100%;white-space:nowrap;" : "width: 130px;")">
                                    @T("Admin.Cards.LastPurchase.DateAndTime")
                                </th>
                                <th style="@(isMobile ? "min-width: 140px;" : "")">
                                    @T("Admin.Cards.LastPurchase.OrderCost")
                                </th>
                                <th style="@(isMobile ? "min-width: 140px;" : "")">
                                    @T("Admin.Cards.LastPurchase.OrderCostDiscount")
                                </th>
                                <th style="@(isMobile ? "min-width: 90px;" : "")">
                                    @T("Admin.Cards.LastPurchase.PaidWithMoney")
                                </th>
                                <th style="@(isMobile ? "min-width: 90px;" : "")">
                                    @T("Admin.Cards.LastPurchase.PaidWithBonuses")
                                </th>
                                <th style="@(isMobile ? "min-width: 90px;" : "")">
                                    @T("Admin.Cards.LastPurchase.BonusesAccrued")
                                </th>
                                <th style="@(isMobile ? "width: 100%;white-space:nowrap;" : "")">
                                    @T("Admin.Cards.LastPurchase.Comment")
                                </th>
                                <th style="@(isMobile ? "width: 100%;white-space:nowrap;" : "")">
                                    @T("Admin.Cards.LastPurchase.Status")
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.DataItems)
                            {
                                <tr data-e2e="PurchaseId-@item.Id">
                                    <td data-e2e="PurchaseId">
                                        @item.Id
                                    </td>
                                    <td data-e2e="PurchaseOrderId">
                                        @if (item.OrderId != null) {
                                            @Html.AbsoluteActionLink(item.OrderId.ToString(), "Edit", "Orders", new { id = item.OrderId }, new { target = "_blank" })
                                        }
                                    </td>
                                    <td data-e2e="PurchaseDate">
                                        @item.CreateOn.ToString("dd.MM.yyyy HH:mm:ss")
                                    </td>
                                    <td data-e2e="PurchaseFullAmount">
                                        @item.PurchaseFullAmount.ToString("F2")
                                    </td>
                                    <td data-e2e="PurchaseDiscount">
                                        @item.PurchaseAmount.ToString("F2")
                                    </td>
                                    <td data-e2e="PurchaseCash">
                                        @item.CashAmount.ToString("F2")
                                    </td>
                                    <td data-e2e="PurchaseBonuses">
                                        @item.BonusAmount.ToString("F2")
                                    </td>
                                    <td data-e2e="PurchaseAddNewBonuses">
                                        @item.NewBonusAmount.ToString("F2")
                                    </td>
                                    <td data-e2e="PurchaseComment">
                                        @item.Comment
                                    </td>
                                    <td data-e2e="PurchaseStatus">
                                        @item.Status.Localize()
                                    </td>
                                </tr>
                            }
                            @if (Model.DataItems.Count < 1)
                            {
                                <tr>
                                    <td colspan="11">
                                        @T("Admin.Cards.AllPurchase.NoRecordsFound")
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="pagination-wrapper">
                    @Html.BootstrapPager(Model.PageIndex, index => Url.AbsoluteActionUrl("AllPurchase", "Cards", new { CardId = ViewBag.CardId, page = index }), Model.TotalItemsCount, Model.ItemsPerPage)
                </div>
            </div>
        </div>
    </div>
</div>
