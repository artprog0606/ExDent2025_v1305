@model List<AdvantShop.Core.Services.Bonuses.Model.Bonus>

@{ 
    var isMobile = SettingsDesign.IsMobileTemplate;
}
<div>

    <h2 class="m-b-sm clearfix setting__subtitle">@T("Admin.Cards.AdditionBonus.AdditionBonuses")</h2>
    <div class="m-b">
        <div class="row">
            <div class="col-xs-12 setting__table-wrap">
                <table id="viewTableAdditionalBonus" class="table table-striped table-bordered table-condensed">
                    <thead>
                        <tr>
                            <th style="@(isMobile ? "min-width: 140px;" : "")">
                                @T("Admin.Cards.AdditionBonus.Name")
                            </th>
                            <th style="@(isMobile ? "min-width: 140px;" : "")">
                                @T("Admin.Cards.AdditionBonus.Amount")
                            </th>
                            <th style="@(isMobile ? "min-width: 140px;" : "")">
                                @T("Admin.Cards.AdditionBonus.Description")
                            </th>
                            <th style="@(isMobile ? "min-width: 140px;" : "")">
                                @T("Admin.Cards.AdditionBonus.ValidFrom")
                            </th>
                            <th style="@(isMobile ? "min-width: 140px;" : "")">
                                @T("Admin.Cards.AdditionBonus.ValidTo")
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr data-e2e="AdditionBonusId-@item.Id">
                                <td data-e2e="AdditionBonusName">
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td data-e2e="AdditionBonusAmount">
                                    @item.Amount.ToInvatiant()
                                </td>
                                <td data-e2e="AdditionBonusDescription">
                                    @Html.DisplayFor(modelItem => item.Description)
                                </td>
                                <td data-e2e="AdditionBonusStartDate">
                                    @if (item.StartDate.HasValue) {
                                       @AdvantShop.Localization.Culture.ConvertShortDate(item.StartDate.Value)
                                    }
                                </td>
                                <td data-e2e="AdditionBonusEndDate">
                                    @if (item.EndDate.HasValue)
                                    {
                                        @AdvantShop.Localization.Culture.ConvertShortDate(item.EndDate.Value)
                                    }                                   
                                </td>
                            </tr>
                        }
                        @if (Model.Count < 1)
                        {
                            <tr>
                                <td colspan="5">
                                    @T("Admin.Cards.AdditionBonus.NoRecordsFound")
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>