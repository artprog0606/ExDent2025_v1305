@using AdvantShop.Core.Services.Admin
@using AdvantShop.Web.Admin.Extensions;
@model AdvantShop.Web.Infrastructure.Handlers.AbstractFilterResult<AdvantShop.Core.Services.Bonuses.Model.PersentHistory>

@{
    var isMobile = SettingsDesign.IsMobileTemplate;

    if (AdminAreaTemplate.IsAdminv3() && !isMobile)
    {
        Layout = "~/Areas/Admin/Templates/" + AdminAreaTemplate.Current + "/Views/BonusSystem/_BonusSystemLayout.cshtml";
    }

    Html.AddAsset("cards");

    var headerModel = new AdvantShop.Web.Admin.ViewModels.Shared.Common.HeaderViewModel();
    headerModel.Title = "<span class=\"float-header-page\">" + T("Admin.Cards.HistoryPersent.ChangesHistory") + "</span>";
    headerModel.ShowOnlySticky = true;
    headerModel.EnabledBack = true;
    headerModel.Back = new AdvantShop.Web.Admin.ViewModels.Shared.Common.BackViewModel()
    {
        Url = Url.AbsoluteActionUrl("Edit", "Cards", new { id = ViewBag.CardId })
    };

    @Html.Header(headerModel)
}

@if (!isMobile) {
    @section BlockAdditional {
        @Html.Partial("~/Areas/Admin/Templates/AdminV3/Views/BonusSystem/_AnalyticsLink.cshtml")
    }
}

<div class="ibox">
    <div class="ibox-content">
        @if (!isMobile)
        {
            @Html.Back("Карта", Url.AbsoluteActionUrl("Edit", "Cards", new { id = ViewBag.CardId }))
            <h2 class="m-b-sm clearfix">@T("Admin.Cards.HistoryPersent.ChangesHistory")</h2>
        }
        <div class="@(isMobile ? "" : "m-b")">
            <div class="row">
                <div class="col-xs-12 setting__table-wrap @(isMobile ? "m-b" : "")">
                    <table class="table table-striped table-bordered table-condensed">
                        <thead>
                            <tr>
                                <th style="@(isMobile ? "width: 100%;white-space:nowrap;" : "width: 30px;")">
                                    @T("Admin.Cards.HistoryPersent.GradeName")
                                </th>
                                <th style="@(isMobile ? "width: 100%;white-space:nowrap;" : "width: 30px;")">
                                    @T("Admin.Cards.HistoryPersent.Percent")
                                </th>
                                <th style="@(isMobile ? "width: 100%;white-space:nowrap;" : "width: 130px;")">
                                    @T("Admin.Cards.HistoryPersent.ChangesDate")
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.DataItems)
                            {
                                <tr>
                                    <td data-e2e="GradeName">
                                        @item.GradeName
                                    </td>
                                    <td data-e2e="BonusPersent">
                                        @item.BonusPersent.ToString("F2")
                                    </td>
                                    <td data-e2e="CreateOn">
                                        @item.CreateOn.ToString("dd.MM.yyyy HH:mm:ss")
                                    </td>
                                </tr>
                            }
                            @if (Model.DataItems.Count < 1)
                            {
                                <tr>
                                    <td colspan="11">
                                        @T("Admin.Cards.HistoryPersent.NoRecordsFound")
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="pagination-wrapper">
                    @Html.BootstrapPager(Model.PageIndex, index => Url.AbsoluteActionUrl("HistoryPersent", "Cards", new { CardId = ViewBag.CardId, page = index }), Model.TotalItemsCount, Model.ItemsPerPage)
                </div>
            </div>
        </div>
    </div>
</div>
