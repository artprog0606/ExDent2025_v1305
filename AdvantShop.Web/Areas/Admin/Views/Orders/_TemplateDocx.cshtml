@model AdvantShop.Web.Admin.Models.Orders.OrdersEdit.OrderModel

<div class="ibox category-block block-additional-parameters">
    <div class="ibox-content category-content block-additional-parameters-content p-r-lg border_none">
        <div class="clear">
            <div class="order__subblock-title pull-left">@T("Admin.Settings.SystemSettings.DocumentGeneration")</div>
        </div>
        @if (Model.TemplatesDocx.Count > 0)
        {
            <div>
                <div>@T("Admin.Settings.SystemSettings.SelectTemplates"):</div>
                <div class="p-b-sm">
                    @foreach (var template in Model.TemplatesDocx)
                    {
                        <div>
                            <label class="adv-checkbox-label form-label-block">
                                <input type="checkbox" checklist-model="order.selectedTemplatesDocx" checklist-value="@template.Id" class="adv-checkbox-input" />
                                <span class="adv-checkbox-emul"></span>
                                <span>@template.Name</span>
                            </label>
                        </div>
                    }
                </div>
                <button class="btn btn-success btn-sm" type="button" ladda="order.creatingDocxs"
                        disabled ng-disabled="!order.selectedTemplatesDocx || order.selectedTemplatesDocx.length === 0"
                        ng-click="order.createDocx()">
                    <span class="fa fa-download" ng-class="{'fa-plus': order.templatesDocxAttach, 'fa-download': !order.templatesDocxAttach}"></span> @T("Admin.Settings.SystemSettings.CreateDocuments")
                </button>
                <label class="adv-checkbox-label">
                    <input id="OrderTemplatesDocxAttach" type="checkbox" class="adv-checkbox-input control-checkbox" ng-model="order.templatesDocxAttach" />
                    <span class="adv-checkbox-emul"></span>
                    @T("Admin.Settings.SystemSettings.AttachToFiles")
                </label>
            </div>
        }
        else
        {
            <p>
                @T("Admin.Settings.SystemSettings.NoTemplates")
            </p>
        }
    </div>
</div>