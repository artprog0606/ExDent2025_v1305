@model AdvantShop.Web.Admin.Models.Settings.IPTelephonySettingsModel

@{
    var isMobile = SettingsDesign.IsMobileTemplate;
}

<div class="form-group row setting__form-group">
    <div class="col-xs-12 col-md-3">
        <div class="setting-label-wrap">
            <label for="CallBackTelphinExtension" class="form-label-block setting__label">@T("Admin.Settings.Telephony.CallBack.TelphinExtension")</label>
        </div>
    </div>
    <div class="col-xs-12 col-md-6 relative @(isMobile ? "flex middle-xs" : "")">
        @Html.TextBoxFor(x => x.CallBackTelphinExtension, new { ng_model = "settingsTelephony.callBackTelphinExtension", @class = "form-control input-alt" })
        <help-trigger class="ng-cloak help-trigger-icon-abs @(isMobile ? "col-xs-1" : "")" data-title="@T("Admin.Settings.Telephony.CallBack.TelphinExtension")">
            @T("Admin.Telphin.CallBack.ExtensionNote")
        </help-trigger>
    </div>
</div>

<div class="form-group row setting__form-group">
    <div class="col-xs-12 col-md-3">
        <div class="setting-label-wrap">
            <label for="CallBackTelphinLocalNumber" class="form-label-block setting__label">@T("Admin.Settings.Telephony.CallBack.TelphinLocalNumber")</label>
        </div>
    </div>
    <div class="col-xs-12 col-md-6 relative @(isMobile ? "flex middle-xs" : "")">
        @Html.TextBoxFor(x => x.CallBackTelphinLocalNumber, new { ng_model = "settingsTelephony.callBackTelphinLocalNumber", @class = "form-control input-alt" })
        <help-trigger class="ng-cloak help-trigger-icon-abs @(isMobile ? "col-xs-1" : "")" data-title="@T("Admin.Settings.Telephony.CallBack.TelphinLocalNumber")">
            @T("Admin.Telphin.CallBack.LocalNumberNote")
        </help-trigger>
    </div>
</div>
