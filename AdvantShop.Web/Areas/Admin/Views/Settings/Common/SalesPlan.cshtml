@using AdvantShop.Repository.Currencies
@model AdvantShop.Web.Admin.Models.Settings.CommonSettingsModel
@{
    var currency = SettingsCatalog.DefaultCurrency.Symbol;
    var isMobile = SettingsDesign.IsMobileTemplate;
}

<div class="setting setting--m-t-sm">
    <div class="setting-title m-t-none sales-plan-heading_mobile-none hidden-xs visible-md">
        <h2 class="page-name-block-text sticky-page-name-text m-b-none">@T("Admin.Settings.Index.SalesPlan")</h2>
    </div>

    <div class="form-group row middle-xs setting__form-group">
        <div class="col-xs-12 col-md-2 setting-form-label-wrap__mobile ">
            <div class="setting-label-wrap">
                @Html.LabelFor(x => x.SalesPlan, T("Admin.Settings.SalesPlanSettings.SalesPlan"))
            </div>
        </div>
        <div class="col-xs-12 col-md-4 setting-form-input-wrap__mobile flex middle-xs">
            @Html.TextBoxFor(x => x.SalesPlan, new { @class = "form-control input-small input-alt", ng_model = "settings.salesPlan" }) <span class="m-l-sm">@currency</span>
            <help-trigger class="ng-cloak @(isMobile ? "m-l-xs p-l-sm" : "m-l-xs")" data-title="@T("Admin.Settings.SalesPlanSettings.SalesPlan")">
                @T("Admin.Settings.SalesPlanSettings.SalesPlanHint")
            </help-trigger>
        </div>
    </div>

    <div class="form-group row middle-xs setting__form-group">
        <div class="col-xs-12 col-md-2 setting-form-label-wrap__mobile ">
            <div class="setting-label-wrap">
                @Html.LabelFor(x => x.ProfitPlan, T("Admin.Settings.SalesPlanSettings.ProfitPlan"))
            </div>
        </div>
        <div class="col-xs-12 col-md-4 setting-form-input-wrap__mobile flex middle-xs">
            @Html.TextBoxFor(x => x.ProfitPlan, new { @class = "form-control input-small input-alt", ng_model = "settings.profitPlan" }) <span class="m-l-sm">@currency</span>
            <help-trigger class="ng-cloak @(isMobile ? "m-l-xs p-l-sm" : "m-l-xs")" data-title="@T("Admin.Settings.SalesPlanSettings.ProfitPlan")">
                @T("Admin.Settings.SalesPlanSettings.ProfitPlanHint")
            </help-trigger>
        </div>
    </div>
</div>
