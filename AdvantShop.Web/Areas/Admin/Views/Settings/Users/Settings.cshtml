@model AdvantShop.Web.Admin.ViewModels.Settings.UsersSettingsViewModel

@{
    var isMobile = SettingsDesign.IsMobileTemplate;
}

@if (!isMobile)
{
    <div class="sticky-page-name @(isMobile ? "" : "m-t-n-xs")" sticky sticky-top="0">
        <div class="page-name-block sticky-page-name-inner @(isMobile ? "" : "m-t-n-xs")">
            <div class="page-name-block-item-main flex middle-xs">
                <h3 class="sticky-page-name-text m-t-none bold setting__subtitle" data-e2e="SearchSettingTitle">
                    @T("Admin.Settings.Users.EmployeeSettings")
                </h3>
            </div>
        </div>
    </div>
}


<div class="form-group row middle-xs setting__form-group">
    <div class="col-xs-12 col-md-3">
        <div class="setting-label-wrap setting__label">
            @T("Admin.Settings.Users.ManagersOrderConstraint")
        </div>
    </div>
    <div class="col-xs-12 col-md-4 relative @(isMobile ? "flex middle-xs" : "")">
        @Html.DropDownListFor(x => x.ManagersOrderConstraint, Model.ManagersOrderConstraintList, new { @class = "form-control input-alt", ng_model = "settingsUsers.ManagersOrderConstraint" })
        <help-trigger class="ng-cloak help-trigger-icon-abs m-l-xs @(isMobile ? "p-l-xs m-l-sm" : "")" data-title="@T("Admin.Settings.Users.ManagersOrderConstraint")">
            <div class="help-content">
                @T("Admin.Settings.Users.Settings.WhatOrdersUserWillSee")<br /><br />
                @T("Admin.Settings.Users.Settings.AllOrdersAvailable")<br /><br />
                @T("Admin.Settings.Users.Settings.AssignedOrders")<br /><br />
                @T("Admin.Settings.Users.Settings.AssignedAndFreeOrders")
            </div>
        </help-trigger>
    </div>
</div>

