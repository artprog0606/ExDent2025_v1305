@model AdvantShop.Web.Admin.Models.Customers.CustomerViewModel
@{
    var isMobile = SettingsDesign.IsMobileTemplate;                                                  
}

<div @Html.Raw(isMobile ? "class=\"card card--form-control\"" : "")>
    <div class="m-b-sm@(isMobile ? " card__label" : "")">@T("Admin.Customers.ViewComment.AdminComment")</div>

    <div data-e2e="clientComment">
        <textarea ng-model="customerView.instance.Customer.AdminComment" ng-blur="customerView.updateAdminComment(customerView.instance.Customer.AdminComment)" class="form-control@(isMobile ? " card__input" : "")" rows="3"></textarea>
    </div>
</div>

