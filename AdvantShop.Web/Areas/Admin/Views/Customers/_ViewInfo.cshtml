                            <div class="col-lg-7 col-xs-6">
                                {{customerView.instance.Customer.IsAgreeForPromotionalNewsletter ? '@T("Admin.Yes")' : '@T("Admin.No")'}}
                            </div>
                        </div>
                    </div>
                }
                <div class="m-b-xs ng-cloak" ng-repeat="field in customerView.instance.CustomerFields">
                    <div class="row">
                        <div class="col-lg-5 col-xs-6">{{field.Name}}</div>
                        <div data-e2e="customerField-{{field.Id}}" class="col-lg-7 col-xs-6">
                            {{field.Value != null && field.Value.length > 0 ? (field.ValueDateFormat != null ? field.ValueDateFormat : field.Value) : "-"}}
                        </div>
                    </div>
                </div>
            </div>

            if (Model.Customer.BirthDayFormatted.IsNotEmpty() && !isMobile)
            {
                <div class="m-b-xs">
                    День рождения: <span class="bold" data-e2e="clientBirthDay" ng-bind="customerView.instance.Customer.BirthDayFormatted">@Model.Customer.BirthDayFormatted</span>
                </div>
            }

            if (Model.CustomerInterestingCategories != null && Model.CustomerInterestingCategories.Any())
            {
                <div>
                    <div>Интересы:</div>
                    <div class="bold" ng-bind="customerView.instance.Customer.CustomerInterestingCategories | list">@Model.CustomerInterestingCategories.AggregateString(", ")</div>
                </div>
            }
        }
    </div>

    <div class="ibox-content category-content block-additional-parameters-content @(!isMobile ? "p-r-lg" : "m-b-md") border_none block-additional-border-top">
        <div class="clear">
            <div class="order__subblock-title view-info__title pull-left">@T("Admin.Customers.View.Addresses")</div>
        </div>
        <div data-address-list data-type="view"
             data-init-address-fn="checkout.changeListAddress(address)"
             data-change-address-fn="checkout.changeListAddress(address)"
             data-save-address-fn="checkout.changeListAddress(address)"
             data-customer-id="'@Model.Customer.Id'"
             data-is-show-name="false"
             data-is-show-full-address="true"
             data-compact-mode="true">
            @if (isMobile)
            {
                <a class="card card--icon view-info__address-map-btn" ng-href="//maps.yandex.ru/?text={{customerView.getCustomerFullAddress(address)}}" data-e2e="CustomerAdressMap" target="_blank">
                    <svg width="18" height="24" viewBox="0 0 18 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M9 0C4.32 0 .6 3.72.6 8.4.6 14.64 9 24 9 24s8.4-9.36 8.4-15.6C17.4 3.72 13.68 0 9 0zm0 11.4c-1.68 0-3-1.32-3-3s1.32-3 3-3 3 1.32 3 3-1.32 3-3 3z" fill="#BE52F2" />
                    </svg>
                </a>
            }
            else
            {
                <div>
                    <a ng-href="//maps.yandex.ru/?text={{customerView.getCustomerFullAddress(address)}}" data-e2e="CustomerAdressMap" target="_blank">@T("Admin.Customers.ViewInfo.ShowOnMap")</a>
                </div>
            }
        </div>
    </div>
   

    @if (Model.ShowCrm)
    {
        <div class="ibox-content category-content block-additional-parameters-content@(!isMobile ? " p-r-lg" : " m-b-md") border_none block-additional-border-top">
            <div class="clear">
                <div class="order__subblock-title view-info__title pull-left">@T("Admin.Orders.Orderinfo.Manager")</div>
            </div>
            @Html.DropDownListFor(x => x.ManagerId, Model.ManagerList, new { @class = "form-control input-alt", ng_model = "customerView.managerId", ng_init = "customerView.managerId=" + (Model.Manager != null ? "'" + Model.ManagerId.ToString() + "'" : "null") + "", ng_change = "customerView.saveManager(customerView.instance.Customer.Id, customerView.managerId)", bs_modifiable = "false" })
        </div>
    }

</div>
