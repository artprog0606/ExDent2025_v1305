                                <span>@T("Admin.Customers.Index.InstructionsBuyers")</span>
                            </a>
                        </div>
                        <div>
                            <div class="flex">
                                <div class="page-name-block-item-additional">
                                    <customer-info-trigger>
                                        <a data-e2e="AddNewClient" class="btn btn-sm btn-success" href="">
                                            <span class="fa fa-plus"></span> @T("Admin.Customers.Index.AddCustomer")
                                        </a>
                                    </customer-info-trigger>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
}




<div class="ibox">
    <div class="ibox-content"
         ng-init="customers.customersInit(@showCrm.ToLowerString(), @showBonuses.ToLowerString())">
        <ui-grid-custom grid-unique-id="gridCustomers"
                        grid-options="customers.gridOptions"
                        grid-url="'customers/getcustomers'"
                        grid-on-init="customers.gridOnInit(grid)"
                        grid-on-filter-init="customers.gridOnFilterInit(filter)"
                        grid-show-export="@showExports.ToLowerString()"
                        grid-swipe-line="@isMobile.ToLowerString()"
                        grid-extend-ctrl="customers">
            @if (isMobile)
            {
                <ui-grid-custom-override-control class="ng-cloak">

                    <a ng-href="customers/view/{{row.entity.CustomerId}}" class="card card--gap-row-sm grid g-xs">
                        <div class="card__title g-col-12" ng-bind="row.entity.Name"></div>
                        <div class="card__text g-col-12 m-t-xs" ng-if="row.entity.Phone" ng-bind="row.entity.Phone"></div>
                        <div class="card__text card__text--color-alt g-col-12" ng-if="row.entity.Email" ng-bind="row.entity.Email"></div>
                    </a>
                </ui-grid-custom-override-control>
            }
        </ui-grid-custom>
    </div>
</div>