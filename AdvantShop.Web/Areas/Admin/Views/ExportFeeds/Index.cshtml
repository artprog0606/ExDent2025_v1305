@using AdvantShop.Core.Services.Admin
@using AdvantShop.ExportImport
@model AdvantShop.Web.Admin.ViewModels.Catalog.ExportFeeds.ExportFeedsModel
@{
    Html.AddAsset("exportFeeds");

    var isAdminv3 = AdminAreaTemplate.Current == "adminv3";
    var isMobile = SettingsDesign.IsMobileTemplate;
    var TypeString = Model.CurrentExportFeedsType.StrName();
    var ExportFeedType = "";

    var InstructionLink = "";
    switch (Model.CurrentExportFeedsType)
    {
@*
        case EExportFeedType.YandexMarket:
            InstructionLink = "https://www.advantshop.net/help/pages/export-yandex-market";
            ExportFeedType = Model.CurrentExportFeedsType.ToString();
            ExportFeedType = "Yandex";
            break;*@
        case EExportFeedType.GoogleMerchentCenter:
            InstructionLink = "https://www.advantshop.net/help/pages/google-merchant-center";
            ExportFeedType = "Google";
            break;
        case EExportFeedType.Avito:
            InstructionLink = "https://www.advantshop.net/help/pages/nastroika-vygruzki-avito-avtozagruzka";
            ExportFeedType = Model.CurrentExportFeedsType.ToString();
            break;
        case EExportFeedType.Reseller:
            InstructionLink = "https://www.advantshop.net/help/pages/module-resellers";
            ExportFeedType = Model.CurrentExportFeedsType.ToString();
            break;
        case EExportFeedType.Facebook:
            InstructionLink = "https://www.advantshop.net/help/pages/export-facebook";
            ExportFeedType = Model.CurrentExportFeedsType.ToString();
            ExportFeedType = "FacebookFeed";
            break;
        default:
            ExportFeedType = Model.CurrentExportFeedsType.ToString();
            break;
    }

    if (TypeString != "Csv")
    {
        var headerModel = new AdvantShop.Web.Admin.ViewModels.Shared.Common.HeaderViewModel();
        headerModel.DefaultTitle = T("Admin.ExportFeeds.Index" + TypeString + ".H1").ToString();
        headerModel.ShowOnlySticky = true;

        headerModel.Controls = new List<IButton>();

        headerModel.Controls.Add(
            new ButtonModel()
            {
                Modificators = new List<eButtonModificators>()
                {
                    eButtonModificators.OnlyIcon
                },
                ColorType = eColorType.Secondary,
                Type = eButtonType.Save,
                WrapStart = " <ui-modal-trigger data-controller=\"'ModalAddExportFeedCtrl'\" controller-as=\"ctrl\" size=\"middle\" template-url=\"" + @Html.GetAssetPath("AddExportFeed.html") + "\"  data-resolve=\"{params: {type: '" + Model.CurrentExportFeedsType + "'}}\">",
                WrapEnd = "</ui-modal-trigger>",
                Icon = new ButtonIcon()
                {
                    SvgName = "plus-alt",
                    Attributes = new { width = 16, height = 16 },
                }
            }
            );

        var moreButton = new MoreButtonModel();
        moreButton.ColorType = eColorType.Secondary;
        moreButton.NgTemplateId = "moreButtonHeaderTemplate";
        moreButton.Items = new List<MoreButtonPopoverItem>();

        moreButton.Items.Add(new MoreButtonPopoverItem()
        {
            Type = eButtonType.Link,
            ColorType = eColorType.Link,
            Modificators = new List<eButtonModificators>()
            {
                eButtonModificators.HorizontalPaddingZero
            },
            Attributes = new[] { "ng-click=\"exportFeeds.deleteSaleChannel('" + ExportFeedType + "')\"" },
            Text = T("Отключить канал"),
            Icon = new ButtonIcon()
            {
                SvgName = "on",
                Attributes = new { width = 24, height = 24 }
            }
        });

        headerModel.Controls.Add(moreButton);

        @Html.Header(headerModel)
    }
}

