@{ 
    var isMobile = SettingsDesign.IsMobileTemplate;
}
@model AdvantShop.Web.Admin.Models.Catalog.ExportFeeds.ExportFeedFields
<div class="@(isMobile ? "" : "container-fluid")" ng-init="exportFeeds.initExportFields(@Model.DefaultExportFields)">
    <div class="form-group row">
        <div class="col-xs-12">
            @if (!isMobile)
            {
                <div class="row m-b-md">
                    <button type="submit" class="btn btn-sm btn-success" data-e2e="exportSetNone" ng-click="exportFeeds.setNoneExportFeedFields()">@T("Admin.ExportFeeds.ChoiceOfFields.ResetData")</button>
                    <button type="submit" class="btn btn-sm btn-success m-l-xs" data-e2e="exportSetDefault" ng-click="exportFeeds.setDefaultExportFeedFields()">@T("Admin.ExportFeeds.ChoiceOfFields.SetDefaultData")</button>
                </div>
            }
            else
            {
                <div class="m-b-md">
                    <a href="https://www.advantshop.net/help/pages/export-csv-columns" target="_blank" class="link-academy link-invert inline-flex middle-xs setting--align-top setting--help-link">
                        <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" version="1.1" id="Layer_1" x="0px" y="0px" viewBox="0 0 512 512" style="enable-background:new 0 0 512 512;" xml:space="preserve" width="18" height="18" fill="#989a9b" class="m-r-xs">
                        <path d="M20.005,512c-5.097,0-10.116-1.948-13.925-5.641c-5.845-5.666-7.672-14.309-4.621-21.855l45.411-112.333  C16.162,332.253,0,285.425,0,236c0-63.375,26.855-122.857,75.62-167.489C123.891,24.331,187.952,0,256,0  s132.109,24.331,180.38,68.511C485.145,113.143,512,172.625,512,236c0,45.448-14.04,89.577-40.602,127.615  c-6.325,9.057-18.792,11.271-27.849,4.947s-11.271-18.792-4.947-27.849C460.452,309.425,472,273.215,472,236  c0-108.075-96.897-196-216-196S40,127.925,40,236c0,43.783,15.577,85.2,45.046,119.773c4.834,5.671,6.115,13.561,3.321,20.47  l-31.366,77.589l91.345-40.266c5.063-2.231,10.826-2.267,15.916-0.095C193.082,425.766,223.946,432,256,432  c36.892,0,73.299-8.587,105.286-24.832c9.85-5,21.887-1.072,26.889,8.775c5.001,9.849,1.073,21.887-8.775,26.889  C341.828,461.914,299.157,472,256,472c-34.48,0-67.835-6.191-99.276-18.413L28.068,510.301C25.474,511.444,22.728,512,20.005,512z   M276,325V217c0-11.046-8.954-20-20-20s-20,8.954-20,20v108c0,11.046,8.954,20,20,20S276,336.046,276,325z M256,128  c-11.046,0-20,8.954-20,20l0,0c0,11.046,8.954,20,20,20s20-8.954,20-20l0,0C276,136.954,267.046,128,256,128z"></path>
                            </svg>
                        <span>Инструкция.Экспорт товаров через файл CSV в формате 1.0</span>
                    </a>
                </div>
            }

            @{
                int index = 0;
                int i = 0;
                int j = 0;
            }
            @for (int item = 1; item < Model.AllFields.Count; item++)
            {
                <div class="@(isMobile ? "col-xs" : "container-fluid")">
                    <div class="form-group row">
                        <div class="col-xs-12">
                            <div class="row @(isMobile ? "" : "setting-label-wrap")">
                                <span class="align-center index-width" style="@(isMobile ? "width:20px;" : "")">@Html.Raw(index + 1)</span>
                                <div class="col-xs col-sm-4">
                                    @{
                                        if (Model.FieldMapping != null && i < Model.FieldMapping.Count && Model.AllFields.ContainsKey(Model.FieldMapping[i].ToString()))
                                        {
                                            @Html.DropDownList(index + "ddl", new SelectList(Model.AllFields, "Key", "Value", Model.FieldMapping[i].ToString()),
                                                new { @class = "form-control input-alt", ng_init = "exportFeeds.exportFeedFields[" + index + "]='" + Model.FieldMapping[i].ToString() + "'", ng_model = "exportFeeds.exportFeedFields[" + index + "]" })
                                            i++;
                                        }
                                        else if (Model.ModuleFieldMapping != null && j < Model.ModuleFieldMapping.Count && Model.AllFields.ContainsKey(Model.ModuleFieldMapping[j].StrName))
                                        {
                                            @Html.DropDownList(index + "ddl", new SelectList(Model.AllFields, "Key", "Value", Model.ModuleFieldMapping[j].StrName),
                                                new { @class = "form-control input-alt", ng_init = "exportFeeds.exportFeedFields[" + index + "]='" + Model.ModuleFieldMapping[j].StrName + "'", ng_model = "exportFeeds.exportFeedFields[" + index + "]" })
                                            j++;
                                        }
                                        else
                                        {
                                            @Html.DropDownList(index + "ddl", new SelectList(Model.AllFields, "Key", "Value"),
                                                new { @class = "form-control input-alt", ng_init = "exportFeeds.exportFeedFields[" + index + "]='" + Model.AllFields.ElementAt(0).Key + "'", ng_model = "exportFeeds.exportFeedFields[" + index + "]" })
                                        }
                                        index++;
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            @if (!isMobile)
            {
                <div class="form-group row">
                    <div class="col-xs-8">
                        <div class="adv-panel-info">
                            <a href="https://www.advantshop.net/help/pages/export-csv-columns" target="_blank">Инструкция.Экспорт товаров через файл CSV в формате 1.0</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
