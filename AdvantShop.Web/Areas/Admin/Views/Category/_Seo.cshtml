@model AdvantShop.Web.Admin.Models.Catalog.Categories.AdminCategoryModel
@{
    var isMobile = SettingsDesign.IsMobileTemplate;
}
<div class="row @(isMobile ? "category-page__form-group" : "seo")">
    <div class="col-xs-12 col-md-3 col-lg-3 col-wl-2">
        <h2 class="category-title category-page__title" style="@(isMobile ? "margin-top:20px;" : "")">SEO</h2>
        <div class="category-page__description">
            @T("Admin.Category.Seo.SeoParametersFilled")<br />
            @*При необходимости вы самостоятельно можете указать SEO параметры такие как: title, h1, keywords, description*@
        </div>
    </div>
    <div class="col-xs-12 col-md-9 col-wl-10">
        <div class="ibox category-block">
            <div class="ibox-content category-content border_none">

                <div>
                    @if (isMobile)
                    {
                        <div class="card card--form-control">
                            <div class="card__label p-b-xs">
                                @(SettingsMain.SiteUrl)/categories/
                            </div>
                            <div class="">
                                @Html.TextBoxFor(x => x.UrlPath, new { @class = "card__input", ng_model = "category.UrlPath", required = "required", validation_input_text = T("Admin.Category.Index.UrlPath") })
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="row middle-xs category-row">
                            <div class="flex-grow-n col-fixed-size-md">
                                <span class="form-label form-label--block text-required">@T("Admin.Category.Index.UrlPath")</span>
                            </div>
                            <div class="flex-grow flex-basis-n flex-width-n flex middle-xs">
                                <label class="input-group flex-grow">
                                    <span class="input-group-addon fs-xs">@(SettingsMain.SiteUrl)/categories/</span>
                                    @Html.TextBoxFor(x => x.UrlPath, new { @class = "form-control", ng_model = "category.UrlPath", required = "required", validation_input_text = T("Admin.Category.Index.UrlPath") })
                                </label>
                                <help-trigger class="ng-cloak m-l-xs" data-title="@T("Admin.Category.Seo.SynonymURL")">
                                    @T("Admin.Category.Seo.Obligatoryfield")
                                </help-trigger>
                            </div>
                        </div>
                    }

                </div>

                <label class="adv-checkbox-label @(isMobile ? "flex" : "col-fixed-offset-md")" data-e2e="categoryDefaultMeta">
                    @Html.CheckBoxFor(x => x.DefaultMeta, new { ng_model = "category.defaultMeta", ng_init = "category.defaultMeta=" + Model.DefaultMeta.ToLowerString(), @class = "adv-checkbox-input" })
                    <span class="adv-checkbox-emul "></span>
                    <span class="@(isMobile ? "flex-grow m-l-xs" : "")">@T("Admin.Category.Seo.UseDefaultMeta")</span>
                    <help-trigger class="ng-cloak word-spacing" data-title="@T("Admin.Category.Seo.UseDefaultMeta")">
                        @T("Admin.Category.Seo.IfEnable")<br>
                        <br>
                        @T("Admin.Category.Seo.IfDisable")<br>
                        <br>
                        @T("Admin.Category.Seo.MoreInfo")<br>
                        <a href="http://www.advantshop.net/help/pages/settings-of-seo-module"> @T("Admin.Category.Seo.DefaultMetaSettings")</a>
                    </help-trigger>
                </label>

                <div class="category-seo-custom-block ng-cloak" ng-if="!category.defaultMeta">
                    <div>
                        <div class="row middle-xs category-row">
                            <div class="flex-grow-n @(isMobile ? "col-xs-12" : "col-fixed-size-md ")">
                                <span class="form-label form-label--block text-required">@T("Admin.Category.Index.SeoTitle")</span>
                            </div>
                            <div class="flex-grow flex-basis-n flex-width-n">
                                @Html.TextBoxFor(x => x.SeoTitle,
                                    new
                                    {
                                        @class = "form-control input-alt",
                                        ng_model = "category.seoTitle",
                                        textcomplete = "",
                                        textcomplete_data = Html.Action("MetaVariablesComplete", "Common", new { type = AdvantShop.SEO.MetaType.Category }),
                                        required = "required",
                                        validation_input_text = T("Admin.Category.Index.SeoTitle").ToString()
                                    })
                            </div>
                        </div>
                    </div>
                    <div>
                        <div class="row middle-xs category-row">
                            <div class="flex-grow-n @(isMobile ? "col-xs-12" : "col-fixed-size-md")">
                                <span class="form-label form-label--block text-required">@T("Admin.Category.Index.SeoH1")</span>
                            </div>
                            <div class="flex-grow flex-basis-n flex-width-n">
                                @Html.TextBoxFor(x => x.SeoH1,
                                    new
                                    {
                                        @class = "form-control input-alt",
                                        ng_model = "category.seoH1",
                                        textcomplete = "",
                                        textcomplete_data = Html.Action("MetaVariablesComplete", "Common", new { type = AdvantShop.SEO.MetaType.Category }),
                                        required = "required",
                                        validation_input_text = T("Admin.Category.Index.SeoH1").ToString()
                                    })
                            </div>
                        </div>
                    </div>
                    <div>
                        <div class="row middle-xs category-row">
                            <div class="flex-grow-n @(isMobile ? "col-xs-12" : "col-fixed-size-md")">
                                <span class="form-label form-label--block">@T("Admin.Category.Index.SeoKeywords")</span>
                            </div>
                            <div class="flex-grow flex-basis-n flex-width-n">
                                @Html.TextAreaFor(x => x.SeoKeywords, new { @class = "form-control input-alt", ng_model = "category.seoKeywords", textcomplete = "", textcomplete_data = Html.Action("MetaVariablesComplete", "Common", new { type = AdvantShop.SEO.MetaType.Category }) })
                            </div>
                        </div>
                    </div>
                    <div>
                        <div class="row middle-xs category-row">
                            <div class="flex-grow-n @(isMobile ? "col-xs-12" : "col-fixed-size-md")">
                                <span class="form-label form-label--block">@T("Admin.Category.Index.SeoDescription")</span>
                            </div>
                            <div class="flex-grow flex-basis-n flex-width-n">
                                @Html.TextAreaFor(x => x.SeoDescription, new { @class = "form-control input-alt", ng_model = "category.seoDescription", textcomplete = "", textcomplete_data = Html.Action("MetaVariablesComplete", "Common", new { type = AdvantShop.SEO.MetaType.Category }) })
                            </div>
                        </div>
                    </div>
                    <div class="@(isMobile ? "fs-xs" : "col-fixed-offset-md")"">@T("Admin.Category.Index.UseGlobalVariables")</div>
                </div>

            </div>
        </div>
    </div>
</div>