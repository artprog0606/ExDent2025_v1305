@model AdvantShop.Web.Admin.Models.Settings.SocialSettingsModel

@{
    var isMobile = SettingsDesign.IsMobileTemplate;
}
@if (!isMobile)
{
    <div class="setting-title m-t-none">
        <h3 class="setting__subtitle">@T("Admin.Settings.Social.Widgets")</h3>
    </div>
}
<div class="form-group row" is-mobile ng-class="{'m-b-sm' : settingsSocial.WidgetVkActive && isMobile.value}">
    <div class="col-xs-12 col-md-6">
        <div class="@(isMobile ? "flex middle-xs" : "setting-label-wrap")">
            <label class="adv-checkbox-label m-r-sm @(isMobile ? "p-r-xs" : "")">
                @Html.CheckBoxFor(x => x.WidgetVkActive, new { @class = "adv-checkbox-input", ng_init = "settingsSocial.WidgetVkActive=" + Model.WidgetVkActive.ToLowerString(), ng_model = "settingsSocial.WidgetVkActive" })
                <span class="adv-checkbox-emul"></span>
            </label>
            @Html.LabelFor(x => Model.WidgetVkActive, T("Admin.Settings.Social.WidgetVkActive"))
        </div>
    </div>

</div>
<div class="form-group row setting__form-group" ng-if="settingsSocial.WidgetVkActive">
    <div class="col-xs-12 col-md-8">
        @Html.TextAreaFor(x => x.WidgetVk, new { @class = "form-control input-alt", ng_model = "settingsSocial.WidgetVk", ng_show = "settingsSocial.WidgetVkActive" })
    </div>
</div>

