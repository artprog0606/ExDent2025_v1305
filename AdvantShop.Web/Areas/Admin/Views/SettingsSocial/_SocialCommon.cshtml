@model AdvantShop.Web.Admin.Models.Settings.SocialSettingsModel

@{
    var isMobile = SettingsDesign.IsMobileTemplate;
}

@if (!isMobile)
{
    <div class="setting-title m-t-none">
        <h3 class="setting__subtitle">@T("Admin.Settings.Social.SocialGroups")</h3>
    </div>
}

<div class="form-group row" is-mobile ng-class="{'m-b-sm' : settingsSocial.LinkVkActive && isMobile.value}">
    <div class="col-xs-12 col-md-6">
        <div class="@(isMobile ? "flex middle-xs" : "setting-label-wrap")">
            <label class="adv-checkbox-label m-r-sm @(isMobile ? "p-r-xs" : "")">
                @Html.CheckBoxFor(x => x.LinkVkActive, new { @class = "adv-checkbox-input", ng_init = "settingsSocial.LinkVkActive=" + Model.LinkVkActive.ToLowerString(), ng_model = "settingsSocial.LinkVkActive" })
                <span class="adv-checkbox-emul"></span>
            </label>
            @Html.LabelFor(x => Model.LinkVkActive, T("Admin.Settings.Social.LinkVkActive"))
        </div>
    </div>
</div>
<div class="form-group row setting__form-group" ng-if="settingsSocial.LinkVkActive">
    <div class="col-xs-12 col-md-8">
        @Html.TextBoxFor(x => x.LinkVk, new { @class = "form-control input-alt", ng_model = "settingsSocial.LinkVk", ng_show = "settingsSocial.LinkVkActive", placeholder = "https://vk.com/<ID>" })
    </div>
</div>

