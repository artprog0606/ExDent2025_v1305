@if (isAdminv3)
{
    <div class="form-group row setting__form-group">
        <div class="col-xs col-sm-2">
            <div class="setting-label-wrap setting__label setting--m-none">
                @Html.LabelFor(x => x.BookingActive, T("Admin.Settings.SystemSettings.AppsBookingActive"))
            </div>
        </div>
        <div class="col-xs-6">
            <label class="adv-checkbox-label @(isMobile ? "adv-checkbox-label--switch-on-off-wrapper" : "")">
                <switch-on-off checked="settingsBooking.BookingActive" on-change="settingsBooking.onChangeStateOffOn(checked)" data-id="BookingActive" ng-init="@("settingsBooking.BookingActive=" + Model.BookingActive.ToLowerString())"></switch-on-off>
            </label>
        </div>
    </div>
}

<div @(isAdminv3 ? "ng-hide=!settingsBooking.BookingActive" : "")>
    <div class="form-group row">
        <div class="col-xs-12 col-md-3 col-wl-2 flex middle-xs">
            <div class="setting-label-wrap setting__label">
                @T("Admin.Settings.Booking.CategoryImageSizes")
            </div>
        </div>
        <div class="col-xs-6 col-sm-2">
            <div class="m-b-xs">
                @T("Admin.Settings.Booking.Width")
            </div>
            @if (isMobile)
            {
                <div class="flex middle-xs">
                    <div class="input-group m-b-sm @(isMobile ? "middle-xs" : "")">
                        @Html.TextBoxFor(x => x.CategoryImageWidth, new { @class = "form-control input-alt", ng_model = "settingsBooking.CategoryImageWidth" })
                        <span class="paramUnit @(isMobile ? "p-l-xs" : "")">px</span>&nbsp;
                    </div>
                    <help-trigger style="visibility:hidden;" class="ng-cloak" data-title=""></help-trigger>
                </div>
            }
            else
            {
                <div class="input-group m-b-sm @(isMobile ? "middle-xs" : "")">
                    @Html.TextBoxFor(x => x.CategoryImageWidth, new { @class = "form-control input-alt", ng_model = "settingsBooking.CategoryImageWidth" })
                    <span class="paramUnit @(isMobile ? "p-l-xs" : "")">px</span>&nbsp;
                </div>
            }
        </div>
        <div class="col-xs-6 col-sm-2">
            <div class="m-b-xs">
                @T("Admin.Settings.Booking.Height")
            </div>
            <div class="flex middle-xs">
                <div class="input-group @(isMobile ? "middle-xs" : "")">
                    @Html.TextBoxFor(x => x.CategoryImageHeight, new { @class = "form-control input-alt", ng_model = "settingsBooking.CategoryImageHeight" })
                    <span class="paramUnit @(isMobile ? "p-l-xs" : "")">px</span>&nbsp;
                </div>
                <help-trigger class="ng-cloak @(isMobile ? "p-l-xs m-l-xs" : "")" data-title="@T("Admin.Settings.Booking.CategoryImageSizes")">
                    @T("Admin.Settings.Booking.CategoryImageSizesHint")
                </help-trigger>
            </div>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-xs-12 col-md-3 col-wl-2 flex middle-xs">
            <div class="setting-label-wrap setting__label">
                @T("Admin.Settings.Booking.ServiceImageDimensions")
            </div>
        </div>
        <div class="col-xs-6 col-sm-2">
            <div class="m-b-xs">
                @T("Admin.Settings.Booking.Width")
            </div>
            @if (isMobile)
            {
                <div class="flex middle-xs">
                    <div class="input-group m-b-sm @(isMobile ? "middle-xs" : "")">
                        @Html.TextBoxFor(x => x.ServiceImageWidth, new { @class = "form-control input-alt", ng_model = "settingsBooking.ServiceImageWidth" })
                        <span class="paramUnit @(isMobile ? "p-l-xs" : "")">px</span>&nbsp;
                    </div>
                    <help-trigger style="visibility:hidden;" class="ng-cloak" data-title=""></help-trigger>
                </div>
            }
            else
            {
                <div class="input-group m-b-sm @(isMobile ? "middle-xs" : "")">
                    @Html.TextBoxFor(x => x.ServiceImageWidth, new { @class = "form-control input-alt", ng_model = "settingsBooking.ServiceImageWidth" })
                    <span class="paramUnit @(isMobile ? "p-l-xs" : "")">px</span>&nbsp;
                </div>
            }
        </div>
        <div class="col-xs-6 col-sm-2">
            <div class="m-b-xs">
                @T("Admin.Settings.Booking.Height")
            </div>
            <div class="flex middle-xs">
                <div class="input-group @(isMobile ? "middle-xs" : "")">
                    @Html.TextBoxFor(x => x.ServiceImageHeight, new { @class = "form-control input-alt", ng_model = "settingsBooking.ServiceImageHeight" })
                    <span class="paramUnit @(isMobile ? "p-l-xs" : "")">px</span>&nbsp;
                </div>
                <help-trigger class="ng-cloak @(isMobile ? "p-l-xs m-l-xs" : "")" data-title="@T("Admin.Settings.Booking.ServiceImageDimensions")">
                    @T("Admin.Settings.Booking.ServiceImageDimensionsHint")
                </help-trigger>
            </div>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-xs-12 col-md-3 col-wl-2 flex middle-xs">
            <div class="setting-label-wrap setting__label">
                @T("Admin.Settings.Booking.ResourceImageDimensions")
            </div>

        </div>
        <div class="col-xs-6 col-sm-2">
            <div class="m-b-xs">
                @T("Admin.Settings.Booking.Width")
            </div>
            @if (isMobile)
            {
                <div class="flex middle-xs">
                    <div class="input-group m-b-sm @(isMobile ? "middle-xs" : "")">
                        @Html.TextBoxFor(x => x.ReservationResourceImageWidth, new { @class = "form-control input-alt", ng_model = "settingsBooking.ReservationResourceImageWidth" })
                        <span class="paramUnit @(isMobile ? "p-l-xs" : "")">px</span>&nbsp;
                    </div>
                    <help-trigger style="visibility:hidden;" class="ng-cloak" data-title=""></help-trigger>
                </div>
            }
            else
            {
                <div class="input-group m-b-sm @(isMobile ? "middle-xs" : "")">
                    @Html.TextBoxFor(x => x.ReservationResourceImageWidth, new { @class = "form-control input-alt", ng_model = "settingsBooking.ReservationResourceImageWidth" })
                    <span class="paramUnit @(isMobile ? "p-l-xs" : "")">px</span>&nbsp;
                </div>
            }
        </div>
        <div class="col-xs-6 col-sm-2">
            <div class="m-b-xs">
                @T("Admin.Settings.Booking.Height")
            </div>
            <div class="flex middle-xs">
                <div class="input-group @(isMobile ? "middle-xs" : "")">
                    @Html.TextBoxFor(x => x.ReservationResourceImageHeight, new { @class = "form-control input-alt", ng_model = "settingsBooking.ReservationResourceImageHeight" })
                    <span class="paramUnit @(isMobile ? "p-l-xs" : "")">px</span>&nbsp;
                </div>
                <help-trigger class="ng-cloak @(isMobile ? "p-l-xs m-l-xs" : "")" data-title="@T("Admin.Settings.Booking.ResourceImageDimensions")">
                    @T("Admin.Settings.Booking.ResourceImageDimensionsHint")
                </help-trigger>
            </div>
