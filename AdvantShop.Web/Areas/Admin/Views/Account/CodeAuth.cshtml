@model AdvantShop.Web.Admin.ViewModels.Shared.Account.AccountLoginViewModel
@{
    Layout = "~/Areas/Admin/Views/Account/_AccountLayout.cshtml";
}

<form class="admin-login-block__form" role="form" name="form" action="codeauth" method="POST" novalidate>
    <div class="relative">
        <input type="text" name="txtCode" id="txtCode" class="admin-signin-field auth-field" placeholder="Код" ng-model="error.code" @(Model.Login.IsNullOrEmpty() ? null : "autofocus")/>
    </div>
    <div class="row middle-xs">
        <div class="col-xs-12">
            <button type="submit" class="btn-auth btn-md">@T("Admin.Account.Enter")</button>
        </div>
    </div>
</form>