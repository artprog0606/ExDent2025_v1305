@model AdvantShop.Web.Admin.Models.Bonuses.Rules.BirthDayRuleModel

<div class="form-group row middle-xs setting__form-group">
    <div class="flex-grow-n col-xs-12 col-md-3">
        <span class="text-required setting__label">@T("Admin.Rules.BirthDay.AddAdditionalBonuses")</span>
    </div>
    <div class="col-xs-12 col-md-6 relative setting--m-t-sm">
        @Html.TextBoxFor(x => x.GiftBonus, new
        {
            @class = "form-control input-alt",
            ng_model = "rule.Rule.GiftBonus",
            required = "required",
            type = "number",
            validation_input_text = T("Admin.Rules.BirthDay.AddAdditionalBonuses").ToString()
        })
    </div>
</div>

<div class="form-group row middle-xs setting__form-group">
    <div class="flex-grow-n col-xs-12 col-md-3">
        <span class="text-required setting__label">@T("Admin.Rules.BirthDay.DayBefore")</span>
    </div>
    <div class="col-xs-12 col-md-6 relative setting--m-t-sm">
        @Html.TextBoxFor(x => x.DaysBefore, new
        {
            @class = "form-control input-alt",
            ng_model = "rule.Rule.DaysBefore",
            required = "required",
            type = "number",
            validation_input_text = T("Admin.Rules.BirthDay.DayBefore").ToString()
        })
    </div>
</div>


<div class="form-group row middle-xs setting__form-group">
    <div class="flex-grow-n col-xs-12 col-md-3">
        @T("Admin.Rules.BirthDay.BonusesValid")
    </div>
    <div class="col-xs-12 col-md-6 relative setting--m-t-sm">
        @Html.TextBoxFor(x => x.BonusAvailableDays, new
        {
            @class = "form-control input-alt",
            ng_model = "rule.Rule.BonusAvailableDays",
            ng_pattern = "/^\\d+$/",
            type = "number",
            validation_input_text = T("Admin.Rules.BirthDay.BonusesValid").ToString()
        })
        @*<help-trigger class="ng-cloak help-trigger-icon-abs" data-title="Срок доставки">
                Срок доставки, как отрезок времени, в который данный метод доставки сможет доставить товар.<br><br>
                Например: 1-2 дня.
            </help-trigger>*@
    </div>
</div>
