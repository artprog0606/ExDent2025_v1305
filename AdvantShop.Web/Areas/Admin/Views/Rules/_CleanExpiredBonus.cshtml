@model AdvantShop.Web.Admin.Models.Bonuses.Rules.CleanExpiredBonusRuleModel

@{
    var isMobile = SettingsDesign.IsMobileTemplate;
}

<div class="form-group row middle-xs setting__form-group">
    @if (!isMobile)
    {
    <div class="flex-grow-n col-xs-12 col-md-3">
        <span>@T("Admin.Rules.CleanBonus.SendNotification")</span>
    </div>
    }
    <div class="col-xs-12 col-md-6 relative">
        <label class="adv-checkbox-label form-label-block @(isMobile ? "flex middle-xs" : "")">
            @Html.CheckBoxFor(x => x.NeedSms, new { @class = "adv-checkbox-input", ng_model = "rule.Rule.NeedSms" })
            <span class="adv-checkbox-emul" data-e2e="NeedSms"></span>
            @if (isMobile)
            {
                <span class="flex-grow setting__label m-l-sm">@T("Admin.Rules.CleanBonus.SendNotification")</span>
            }
        </label>
    </div>
</div>

<div class="form-group row middle-xs setting__form-group" ng-if="rule.Rule.NeedSms">
    <div class="flex-grow-n col-xs-12 col-md-3">
        <span class="text-required setting__label">@T("Admin.Rules.CleanBonus.DayBeforeNotice")</span>
    </div>
    <div class="col-xs-12 col-md-6 relative setting--m-t-sm">
        @Html.TextBoxFor(x => x.DayBefore, new { @class = "form-control input-alt", ng_model = "rule.Rule.DaysBefore", required = "required", validation_input_text = T("Admin.Rules.CleanBonus.DayBeforeNotice").ToString() })
    </div>
</div>
