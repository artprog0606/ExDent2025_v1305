@model AdvantShop.Web.Admin.ViewModels.Triggers.TriggersViewModel
@{
    Layout = "~/Areas/Admin/Views/Triggers/_TriggersLayout.cshtml";

    Html.AddAsset("triggers");

    var isMobile = SettingsDesign.IsMobileTemplate;
}

