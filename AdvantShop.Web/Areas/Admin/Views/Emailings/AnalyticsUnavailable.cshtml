@{
    var isMobile = SettingsDesign.IsMobileTemplate;
}

<div class="ibox static-notify">
    <div class="ibox-content @(isMobile ? "" : "p-xs-x2")">
        <span class="label label-notice @(isMobile ? "" : "m-r")">@T("Admin.Leads.Index.Attention")</span>
        @if (isMobile)
        {
            <span style="margin-left: -3px;">!</span>
        }
        <span class="@(isMobile ? "" : "block")">Для получения аналитики по Email рассылкам, необходимо подключить почтовую службу ADVANTSHOP.</span>
        <a href="settingsmail?notifyTab=emailsettings" class="btn btn-sm btn-default @(isMobile ? "flex m-t-sm" : "m-l-sm")">Настроить</a>
    </div>
</div>
