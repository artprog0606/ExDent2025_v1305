@using AdvantShop.App.Landing.Domain.Auth
@model AdvantShop.Web.Admin.Models.Landings.LandingAdminSiteSettings

@{
    var isMobile = SettingsDesign.IsMobileTemplate;
}

<div class="row" ng-init="landingSite.settings.AuthLeadDealStatusId = @(Model.AuthLeadDealStatusId.HasValue ? "'" + Model.AuthLeadDealStatusId + "'" : "null")">
    <div class="col-xs-12 col-md-11">
        <div class="form-group row middle-xs  @(isMobile ? "funnel__form-group funnel__reverse" : "")">
            @if (!isMobile)
            {
                <div class="col-xs-11 col-md-3 col-wl-2">
                    <div class="setting-label-wrap @(isMobile ? "funnel__label funnel--m-none" : "")">
                        @T("Admin.Views.Funnels.Settings.Auth.RequireLogin")
                    </div>
                </div>
            }
            <div class="col-xs-12 col-md">
                <label class="adv-checkbox-label">
                    @Html.CheckBoxFor(x => x.RequireAuth, new { @class = "adv-checkbox-input", ng_model = "landingSite.settings.RequireAuth" })
                    <span class="adv-checkbox-emul"></span>
                    @if (isMobile)
                    {
                        <span class="m-l-sm flex-grow @(isMobile ? "funnel--m-none" : "")">
                            @T("Admin.Views.Funnels.Settings.Auth.RequireLogin")
                        </span>
                    }
                </label>
            </div>
        </div>

        <div class="form-group row middle-xs @(isMobile ? "funnel__form-group" : "")">
            <div class="col-xs-12 col-md-3 col-wl-2">
                <div class="setting-label-wrap @(isMobile ? "funnel__label m-b-sm" : " m-b-md")">
                    @T("Admin.Views.Funnels.Settings.Auth.LinkRegistrationPage")
                </div>
            </div>
            <div class="col-xs-12 col-md">
                @Html.TextBoxFor(x => x.AuthRegUrl, new { @class = "form-control input-alt", ng_model = "landingSite.settings.AuthRegUrl" })
                <div class="sub @(isMobile ? "m-t-xs" : "")">@T("Admin.Views.Funnels.Settings.Auth.HereCanSpecifyAddress")</div>
            </div>
        </div>

        <div class="form-group row middle-xs @(isMobile ? "funnel__form-group" : "")">
            <div class="col-xs-12 col-md-3 col-wl-2">
                <div class="setting-label-wrap @(isMobile ? "funnel__label m-b-sm" : "")">
                    @T("Admin.Views.Funnels.Settings.Auth.PageDisplayConditions")
                </div>
            </div>
            <div class="col-xs-12 col-md">
                @Html.DropDownListFor(x => x.AuthFilterRule, Model.AuthFilterRules, new { @class = "form-control input-alt", ng_model = "landingSite.settings.AuthFilterRule", convert_to_number = true })
            </div>
        </div>

        <div ng-switch="landingSite.settings.AuthFilterRule">
            <div ng-switch-when="@ELpAuthFilterRule.WithOrderAndProduct.ConvertIntString()"
                 ng-init="landingSite.getAuthOrderProducts()">
                <div class="form-group row middle-xs @(isMobile ? "funnel__form-group" : "")">
                    <div class="col-xs-12 col-md-offset-3 col-wl-offset-2">
                        <div class="m-b-sm" ng-if="landingSite.AuthOrderProducts != null && landingSite.AuthOrderProducts.length > 0">
                            <span class="@(isMobile ? "control-label" : "")">@T("Admin.Funnels.Settings.Goods")</span>
                            <div ng-repeat="item in landingSite.AuthOrderProducts track by $index" class="@(isMobile ? "flex middle-xs" : "")">
                                <a href="" ng-href="{{item.Url}}" target="_blank">
                                    {{item.Name}}
                                </a>
                                <a ng-click="landingSite.deleteAuthOrderProduct(item.ProductId)" href="" class="m-l-xs m-r-lg @(isMobile ? "flex m-t-xs" : "")" title="Удалить">
                                    <span class="fas fa-times"></span>
                                </a>
                            </div>
                        </div>
                        <ui-modal-trigger data-controller="'ModalProductsSelectvizrCtrl'" controller-as="ctrl" size="xs-11"
                                          template-url="@Html.GetAssetPath("productsSelectvizrModal.html")"
                                          data-on-close="landingSite.selectAuthOrderProducts(result)">
                            <a href="" class="@(isMobile ? "btn btn-sm btn-success" : "")">@T("Admin.Views.Funnels.Settings.Auth.AddProducts")</a>
                        </ui-modal-trigger>
                    </div>
                </div>
            </div>

            <div ng-switch-when="@ELpAuthFilterRule.WithLead.ConvertIntString()">
                <div class="form-group row middle-xs @(isMobile ? "funnel__form-group" : "")">
                    <div class="col-xs-12 col-md-3 col-wl-2 @(isMobile ? "funnel__label m-b-sm setting-label-wrap" : "")">
                        @T("Admin.Views.Funnels.Settings.Auth.LeadList")
                    </div>
                    <div class="col-xs-12 col-md">
                        @Html.DropDownListFor(x => x.AuthLeadSalesFunnelId, Model.SalesFunnels, new
                        {
                            @class = "form-control input-alt",
                            ng_model = "landingSite.settings.AuthLeadSalesFunnelId",
                            ng_change = "landingSite.getDealStatuses(landingSite.settings.AuthLeadSalesFunnelId)",
                            required = "required",
                            validation_input_text = T("Admin.Views.Funnels.Settings.Auth.LeadList"),
                            convert_to_number = true
                        })
                    </div>
                </div>
                <div ng-if="landingSite.settings.AuthLeadSalesFunnelId" class="form-group row middle-xs"
                     ng-init="landingSite.getDealStatuses(landingSite.settings.AuthLeadSalesFunnelId)">
                    <div class="col-xs-12 col-md-3 col-wl-2 @(isMobile ? "funnel__label setting-label-wrap" : "")">
                        @T("Admin.Views.Funnels.Settings.Auth.Status")
                    </div>
                    <div class="col-xs-12 col-md">
                        <select class="form-control input-alt" id="AuthLeadDealStatusId" name="AuthLeadDealStatusId" convert-to-number
                                ng-model="landingSite.settings.AuthLeadDealStatusId"
                                ng-options="item.value as item.label for item in landingSite.DealStatuses">
                            <option value="">@T("Admin.Views.Funnels.Settings.Auth.Any")</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


