@using AdvantShop.Core.Services.Diagnostics
@model AdvantShop.ViewModel.User.ClientCodeViewModel

@if ((Model.Code != "0" && Model.Code != string.Empty) || DebugMode.IsDebugMode(eDebugMode.CriticalCss))
{
    <span class="site-head-userid"><span class="site-head-cart-code-text">@T("User.ClientCode.ClientCode"):</span> <span class="site-head-cart-code" data-client-code data-ng-bind-html="clientCode.Code" data-start-val="{Code: '000-000'}">@Html.Raw(Model.Code)</span></span>
}
