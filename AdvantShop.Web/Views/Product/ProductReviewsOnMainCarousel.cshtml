@using AdvantShop.Catalog
@using AdvantShop.CMS
@model AdvantShop.ViewModel.ProductDetails.ProductReviewsViewModel

<article class="product-reviews-sliders"
         data-reviews
         data-moderate="@Model.ModerateReviews.ToLowerString()"
         data-is-admin="@Model.IsAdmin.ToLowerString()"
         data-entity-type="@Model.EntityType"
         data-name="@Model.UserName"
         data-email="@Model.Email"
         data-readonly="@Model.ReviewsReadonly.ToLowerString()"
         data-on-delete-comment="product.getCommentsCount()">
        <header class="products-specials-header">
            <h2 class="product-reviews-sliders-title">@T("Js.ProductReviewCarousel.Title")</h2>
        </header>
        <div>
            <div class="product-review-card-wrap">
                <carousel-ext-root class="glide carousel-ext"
                                   carousel-ext-rewind="true"
                                   carousel-ext-bound="true"
                                   carousel-ext-type="slider"
                                   carousel-ext-swipe-threshold="@Model.CountInSection"
                                   carousel-ext-per-view="@Model.CountInLine"
                                   carousel-ext-break-points="{768:{perView: 1,peek:{ before: 0, after: 50 }},1200:{perView: 2}}">
                    <carousel-ext-track class="glide__track carousel-ext__track">
                        <carousel-ext-slides class="glide__slides carousel-ext__slides" style="will-change:auto">
                            @foreach (var item in Model.Reviews)
                            {
                                <carousel-ext-item class="glide__slide carousel-ext__slide" itemprop="review" itemscope itemtype="https://schema.org/Review">
                                    <meta itemprop="itemReviewed" content="@Html.AttributeEncode(Html.GetPageH1())" />
                                    <div class="product-review-card cs-br-1" data-review-item data-review-id="@item.ReviewId">
                                        <div>
                                            <div class="flex middle-xs between-xs m-b-sm" itemprop="author" itemscope itemtype="https://schema.org/Person" @Html.InplaceReview(item.ReviewId.ToString(), ReviewInplaceField.Name, true)>
                                                <span class="product-review-card__name" itemprop="name">@Html.Raw(item.Name)</span>
                                                @if (Model.ShowVerificationCheckmarkAtAdminInReviews && item.Customer != null && item.Customer.IsAdmin)
                                                {
                                                    <span class="m-l-xs">
                                                        <svg xmlns="http://www.w3.org/2000/svg" width="512" height="512" viewBox="0 0 512 512" fill="none" style="height: 10px; width: 10px">
                                                            <path d="M173.898 439.404l-166.4-166.4c-9.997-9.997-9.997-26.206 0-36.204l36.203-36.204c9.997-9.998 26.207-9.998 36.204 0L192 312.69 432.095 72.596c9.997-9.997 26.207-9.997 36.204 0l36.203 36.204c9.997 9.997 9.997 26.206 0 36.204l-294.4 294.401c-9.998 9.997-26.207 9.997-36.204-.001z" fill="#2D9CEE" />
                                                        </svg>
                                                    </span>
                                                }
                                            </div>
                                            <div class="flex middle-xs between-xs m-b-sm">
                                                <time class="product-review-card__add-date" datetime="@item.AddDate.ToString("yyyy-MM-dd")" itemprop="datePublished">@item.AddDate.ToShortDateTime()</time>
                                            </div>
                                            @if (item.Rating.HasValue)
                                            {
                                                <div class="flex middle-xs between-xs m-b-sm">
                                                    @Html.Partial("_Rating", new RatingViewModel(item.Rating.Value))
                                                </div>
                                            }
                                            @if (item.Type == EntityType.Product)
                                            {
                                                var productUrl = UrlService.GetObjUrlFromDb(ParamType.Product, item.EntityId);
                                                var productName = ProductService.GetProduct(item.EntityId).Name;
                                                <div class="flex middle-xs between-xs m-b-sm">
                                                    <a href="@Url.AbsoluteRouteUrl("Product", new {url = productUrl})" target="_blank">@productName</a>
                                                </div>
                                            }
                                            @if (Model.DisplayImage && item.Photos.Any())
                                            {
                                                <div class="flex middle-xs between-xs m-b-sm" style="flex-flow: column;">
                                                    <div class="product-review-card__photo-list"
                                                         data-magnific-popup
                                                         data-magnific-popup-options="{gallery : {enabled : true}, delegate: 'a.product-review-card__photo-link', type: 'image'}">
                                                        @foreach (var photo in item.Photos.Take(2))
                                                        {
                                                            <div class="product-review-card__photo-item">
                                                                <a class="product-review-card__photo-link" href="@(!string.IsNullOrWhiteSpace(photo.BigImageSrc()) ? photo.BigImageSrc() : "images/nophoto_user.jpg")">
                                                                    <img alt="@item.Name" src="@(!string.IsNullOrWhiteSpace(photo.ImageSrc()) ? photo.ImageSrc() : "images/nophoto_user.jpg")" @Html.InplaceImageReview(photo.PhotoId.ToString(), item.ReviewId.ToString())/>
                                                                </a>
                                                            </div>
                                                        }
                                                    </div>
                                                    <div class="product-review-card__photo-list"
                                                         data-magnific-popup
                                                         data-magnific-popup-options="{gallery : {enabled : true}, delegate: 'a.product-review-card__photo-link', type: 'image'}" 
                                                         data-ng-if="review.showAllReviewPhoto">
                                                        @foreach (var photo in item.Photos.Skip(2))
                                                        {
                                                            <div class="product-review-card__photo-item">
                                                                <a class="product-review-card__photo-link" href="@(!string.IsNullOrWhiteSpace(photo.BigImageSrc()) ? photo.BigImageSrc() : "images/nophoto_user.jpg")">
                                                                    <img alt="@item.Name" src="@(!string.IsNullOrWhiteSpace(photo.ImageSrc()) ? photo.ImageSrc() : "images/nophoto_user.jpg")" @Html.InplaceImageReview(photo.PhotoId.ToString(), item.ReviewId.ToString())/>
                                                                </a>
                                                            </div>
                                                        }
                                                    </div>
                                                </div>
                                                <a href="javascript:void(0)"
                                                   data-ng-click="review.showAllReviewPhoto = !review.showAllReviewPhoto"
                                                   data-ng-init="review.showAllReviewPhoto = false;">
                                                    <span data-ng-if="review.showAllReviewPhoto">@T("Js.ProductReviewCard.HidePhotos")</span>
                                                    <span data-ng-if="!review.showAllReviewPhoto">@T("Js.ProductReviewCard.ShowPhotos")</span>
                                                </a>
                                            }
                                            <read-more class="product-review-card__text m-b-sm">
                                                <div itemprop="description" @Html.InplaceReview(item.ReviewId.ToString(), ReviewInplaceField.Message)>
                                                    @Html.Raw(item.Text)
                                                </div>
                                            </read-more>
